<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========== 浅色主题颜色定义（仅供参考，实际由ThemeService动态应用）========== -->
    
    <!-- 背景色 -->
    <Color x:Key="LightBackgroundColor">#fafafa</Color>
    <Color x:Key="LightSurfaceColor">#ffffff</Color>
    <Color x:Key="LightCardBackgroundColor">#ffffff</Color>
    <Color x:Key="LightHoverBackgroundColor">#f8fafc</Color>
    <Color x:Key="LightSidebarBackgroundColor">#1e293b</Color>
    <Color x:Key="LightSidebarDarkBackgroundColor">#0f172a</Color>
    
    <!-- 文字色 -->
    <Color x:Key="LightTextPrimaryColor">#1f2937</Color>
    <Color x:Key="LightTextSecondaryColor">#6b7280</Color>
    <Color x:Key="LightTextTertiaryColor">#9ca3af</Color>
    <Color x:Key="LightTextDisabledColor">#d1d5db</Color>
    
    <!-- 边框色 -->
    <Color x:Key="LightBorderColor">#e5e7eb</Color>
    <Color x:Key="LightBorderLightColor">#f3f4f6</Color>
    <Color x:Key="LightBorderDarkColor">#d1d5db</Color>
    
    <!-- 主题色 -->
    <Color x:Key="LightPrimaryPaleColor">#e0e7ff</Color>
    
    <!-- 功能色浅色版本 -->
    <Color x:Key="LightSuccessLightColor">#d1fae5</Color>
    <Color x:Key="LightWarningLightColor">#fef3c7</Color>
    <Color x:Key="LightDangerLightColor">#fee2e2</Color>
    <Color x:Key="LightInfoLightColor">#d1f5ff</Color>
    
    <!-- 背景画刷 -->
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackgroundColor}"/>
    <SolidColorBrush x:Key="LightSurfaceBrush" Color="{StaticResource LightSurfaceColor}"/>
    <SolidColorBrush x:Key="LightCardBackgroundBrush" Color="{StaticResource LightCardBackgroundColor}"/>
    <SolidColorBrush x:Key="LightHoverBackgroundBrush" Color="{StaticResource LightHoverBackgroundColor}"/>
    <SolidColorBrush x:Key="LightSidebarBackgroundBrush" Color="{StaticResource LightSidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="LightSidebarDarkBackgroundBrush" Color="{StaticResource LightSidebarDarkBackgroundColor}"/>
    
    <!-- 文字画刷 -->
    <SolidColorBrush x:Key="LightTextPrimaryBrush" Color="{StaticResource LightTextPrimaryColor}"/>
    <SolidColorBrush x:Key="LightTextSecondaryBrush" Color="{StaticResource LightTextSecondaryColor}"/>
    <SolidColorBrush x:Key="LightTextTertiaryBrush" Color="{StaticResource LightTextTertiaryColor}"/>
    <SolidColorBrush x:Key="LightTextDisabledBrush" Color="{StaticResource LightTextDisabledColor}"/>
    
    <!-- 边框画刷 -->
    <SolidColorBrush x:Key="LightBorderBrush" Color="{StaticResource LightBorderColor}"/>
    <SolidColorBrush x:Key="LightBorderLightBrush" Color="{StaticResource LightBorderLightColor}"/>
    <SolidColorBrush x:Key="LightBorderDarkBrush" Color="{StaticResource LightBorderDarkColor}"/>

</ResourceDictionary>

