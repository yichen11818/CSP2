<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========== 深色主题颜色定义（仅供参考，实际由ThemeService动态应用）========== -->
    
    <!-- 背景色 -->
    <Color x:Key="DarkBackgroundColor">#1e1e1e</Color>
    <Color x:Key="DarkSurfaceColor">#2d2d2d</Color>
    <Color x:Key="DarkCardBackgroundColor">#252525</Color>
    <Color x:Key="DarkHoverBackgroundColor">#3c3c3c</Color>
    <Color x:Key="DarkSidebarBackgroundColor">#0f172a</Color>
    <Color x:Key="DarkSidebarDarkBackgroundColor">#0c1421</Color>
    
    <!-- 文字色 -->
    <Color x:Key="DarkTextPrimaryColor">#e5e7eb</Color>
    <Color x:Key="DarkTextSecondaryColor">#9ca3af</Color>
    <Color x:Key="DarkTextTertiaryColor">#6b7280</Color>
    <Color x:Key="DarkTextDisabledColor">#4b5563</Color>
    
    <!-- 边框色 -->
    <Color x:Key="DarkBorderColor">#374151</Color>
    <Color x:Key="DarkBorderLightColor">#4b5563</Color>
    <Color x:Key="DarkBorderDarkColor">#1f2937</Color>
    
    <!-- 主题色 -->
    <Color x:Key="DarkPrimaryPaleColor">#312e81</Color>
    
    <!-- 功能色浅色版本 -->
    <Color x:Key="DarkSuccessLightColor">#064e3b</Color>
    <Color x:Key="DarkWarningLightColor">#78350f</Color>
    <Color x:Key="DarkDangerLightColor">#7f1d1d</Color>
    <Color x:Key="DarkInfoLightColor">#164e63</Color>
    
    <!-- 背景画刷 -->
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackgroundColor}"/>
    <SolidColorBrush x:Key="DarkSurfaceBrush" Color="{StaticResource DarkSurfaceColor}"/>
    <SolidColorBrush x:Key="DarkCardBackgroundBrush" Color="{StaticResource DarkCardBackgroundColor}"/>
    <SolidColorBrush x:Key="DarkHoverBackgroundBrush" Color="{StaticResource DarkHoverBackgroundColor}"/>
    <SolidColorBrush x:Key="DarkSidebarBackgroundBrush" Color="{StaticResource DarkSidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="DarkSidebarDarkBackgroundBrush" Color="{StaticResource DarkSidebarDarkBackgroundColor}"/>
    
    <!-- 文字画刷 -->
    <SolidColorBrush x:Key="DarkTextPrimaryBrush" Color="{StaticResource DarkTextPrimaryColor}"/>
    <SolidColorBrush x:Key="DarkTextSecondaryBrush" Color="{StaticResource DarkTextSecondaryColor}"/>
    <SolidColorBrush x:Key="DarkTextTertiaryBrush" Color="{StaticResource DarkTextTertiaryColor}"/>
    <SolidColorBrush x:Key="DarkTextDisabledBrush" Color="{StaticResource DarkTextDisabledColor}"/>
    
    <!-- 边框画刷 -->
    <SolidColorBrush x:Key="DarkBorderBrush" Color="{StaticResource DarkBorderColor}"/>
    <SolidColorBrush x:Key="DarkBorderLightBrush" Color="{StaticResource DarkBorderLightColor}"/>
    <SolidColorBrush x:Key="DarkBorderDarkBrush" Color="{StaticResource DarkBorderDarkColor}"/>

</ResourceDictionary>
