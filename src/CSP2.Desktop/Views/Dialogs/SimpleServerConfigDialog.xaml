<Window x:Class="CSP2.Desktop.Views.Dialogs.SimpleServerConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="⚙️ 服务器配置" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock FontSize="28" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}">
                <Run Text="{StaticResource SettingsIcon}" FontFamily="{StaticResource FontAwesomeSolid}"/>
                <Run Text=" 服务器配置"/>
            </TextBlock>
            <TextBlock Text="配置服务器启动参数" 
                       FontSize="14" 
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- 启动参数输入 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 启动参数输入框 -->
                <Border Background="{DynamicResource SurfaceBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8">
                            <Run Text="🚀" />
                            <Run Text=" 启动参数"/>
                        </TextBlock>
                        
                        <TextBlock Text="输入完整的服务器启动参数，每行一个参数或用空格分隔" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,12"/>
                        
                        <Border Background="#1e1e1e"
                                BorderBrush="#333333"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12">
                            <TextBox x:Name="LaunchArgsTextBox"
                                     Height="240"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     Foreground="#d4d4d4"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     ToolTip="输入启动参数，例如：-dedicated -console -ip 0.0.0.0 -port 27015 +map de_dust2"/>
                        </Border>
                        
                        <TextBlock TextWrapping="Wrap" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   Margin="0,12,0,0">
                            <Run Text="{StaticResource InfoIcon}" FontFamily="{StaticResource FontAwesomeSolid}"/>
                            <Run Text=" 提示：留空将使用默认参数 (-dedicated -console -ip 0.0.0.0 -port 27015 -maxplayers 10 -tickrate 128 +map de_dust2)"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- 参数说明 -->
                <Border Background="#e3f2fd"
                        BorderBrush="{DynamicResource PrimaryBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel>
                        <TextBlock FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8">
                            <Run Text="{StaticResource LightbulbIcon}" FontFamily="{StaticResource FontAwesomeSolid}"/>
                            <Run Text=" 常用参数说明"/>
                        </TextBlock>
                        
                        <TextBlock TextWrapping="Wrap" 
                                   FontSize="11" 
                                   Foreground="{DynamicResource TextSecondaryBrush}">
                            <Run Text="-dedicated" FontFamily="Consolas" FontWeight="SemiBold"/>
                            <Run Text=" - 专用服务器模式"/>
                            <LineBreak/>
                            <Run Text="-console" FontFamily="Consolas" FontWeight="SemiBold"/>
                            <Run Text=" - 启用控制台"/>
                            <LineBreak/>
                            <Run Text="-ip 0.0.0.0" FontFamily="Consolas" FontWeight="SemiBold"/>
                            <Run Text=" - 监听所有网卡"/>
                            <LineBreak/>
                            <Run Text="-port 27015" FontFamily="Consolas" FontWeight="SemiBold"/>
                            <Run Text=" - 服务器端口"/>
                            <LineBreak/>
                            <Run Text="-maxplayers 10" FontFamily="Consolas" FontWeight="SemiBold"/>
                            <Run Text=" - 最大玩家数"/>
                            <LineBreak/>
                            <Run Text="-tickrate 128" FontFamily="Consolas" FontWeight="SemiBold"/>
                            <Run Text=" - 服务器刷新率"/>
                            <LineBreak/>
                            <Run Text="+map de_dust2" FontFamily="Consolas" FontWeight="SemiBold"/>
                            <Run Text=" - 启动地图"/>
                            <LineBreak/>
                            <Run Text="+game_mode 1" FontFamily="Consolas" FontWeight="SemiBold"/>
                            <Run Text=" - 游戏模式 (0=休闲 1=竞技)"/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run Text="更多配置建议使用 "/>
                            <Run Text="game/csgo/cfg/autoexec.cfg" FontFamily="Consolas" FontWeight="SemiBold"/>
                            <Run Text=" 文件"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <Grid Grid.Row="2" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="取消"
                    Click="CancelButton_Click"
                    MinWidth="100"
                    Height="36"
                    Style="{DynamicResource SecondaryButton}"/>

            <Button Grid.Column="3"
                    Content="✅ 保存配置"
                    Click="SaveButton_Click"
                    MinWidth="120"
                    Height="36"
                    Style="{DynamicResource PrimaryButton}"/>
        </Grid>
    </Grid>
</Window>

