<UserControl x:Class="CSP2.Desktop.Views.Pages.LogConsolePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
             xmlns:converters="clr-namespace:CSP2.Desktop.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodels:LogConsoleViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏和控制 -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="{converters:Localization LogConsole.Title}" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="#1f2937"/>
                <TextBlock Text="{converters:Localization LogConsole.Subtitle}" 
                           FontSize="14" 
                           Foreground="#6b7280"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- 控制栏 -->
            <Grid Grid.Row="1" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{converters:Localization LogConsole.Server}" 
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="#374151"
                           Margin="0,0,10,0"/>

                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding Servers}"
                          SelectedItem="{Binding SelectedServer}"
                          DisplayMemberPath="Name"
                          Height="35"
                          VerticalContentAlignment="Center"
                          FontSize="14"/>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Content="📋 复制"
                            Command="{Binding CopyLogsCommand}"
                            Background="#f3f4f6"
                            Foreground="#374151"
                            Padding="15,8"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="13"
                            ToolTip="复制所有日志到剪贴板"
                            Margin="0,0,10,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    
                    <Button Content="💾 导出"
                            Command="{Binding ExportLogsCommand}"
                            Background="#f3f4f6"
                            Foreground="#374151"
                            Padding="15,8"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="13"
                            ToolTip="导出日志到文件"
                            Margin="0,0,10,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    
                    <Button Content="{converters:Localization LogConsole.Clear}"
                            Command="{Binding ClearLogsCommand}"
                            Background="#f3f4f6"
                            Foreground="#374151"
                            Padding="15,8"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="13">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 日志显示区域 - 使用TextBox支持文本选择 -->
        <Border Grid.Row="1" 
                BorderBrush="#e5e7eb" 
                BorderThickness="1"
                CornerRadius="8"
                Background="#0f172a">
            <TextBox x:Name="LogTextBox"
                     Text="{Binding LogText, Mode=OneWay}"
                     FontFamily="Consolas"
                     FontSize="13"
                     Foreground="#e2e8f0"
                     Background="Transparent"
                     BorderThickness="0"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     Padding="15"
                     AcceptsReturn="True"
                     VerticalContentAlignment="Top"
                     TextChanged="LogTextBox_TextChanged">
                <TextBox.Resources>
                    <!-- 自定义滚动条样式 -->
                    <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernScrollBar}"/>
                </TextBox.Resources>
            </TextBox>
        </Border>

        <!-- 命令输入区域 -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="❯"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"
                       VerticalAlignment="Center"
                       Margin="5,0,10,0"/>

            <TextBox Grid.Column="1"
                     Text="{Binding CommandText, UpdateSourceTrigger=PropertyChanged}"
                     FontFamily="Consolas"
                     FontSize="14"
                     Height="40"
                     VerticalContentAlignment="Center"
                     Padding="12,0"
                     BorderBrush="#e5e7eb"
                     BorderThickness="1">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SendCommandCommand}"/>
                </TextBox.InputBindings>
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Button Grid.Column="2"
                    Content="{converters:Localization LogConsole.Send}"
                    Command="{Binding SendCommandCommand}"
                    Background="{StaticResource PrimaryBrush}"
                    Foreground="White"
                    Padding="25,10"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Margin="10,0,0,0"
                    Height="40">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <!-- 空状态提示 -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Visibility="{Binding Logs.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <TextBlock Text="📋" 
                       FontSize="64" 
                       HorizontalAlignment="Center"
                       Opacity="0.3"/>
            <TextBlock Text="{converters:Localization LogConsole.NoLogs}" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Foreground="#6b7280"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
            <TextBlock Text="{converters:Localization LogConsole.NoLogsHint}" 
                       FontSize="14" 
                       Foreground="#9ca3af"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>

