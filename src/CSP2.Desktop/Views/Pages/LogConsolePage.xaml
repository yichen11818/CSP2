                                    Background="{StaticResource PrimaryBrush}"
                                    Foreground="White"
                                    Padding="10,5"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontSize="12"
                                    Height="26">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Button Content="æ–­å¼€"
