                            <Run Text="{StaticResource LightbulbIcon}" FontFamily="{StaticResource FontAwesomeSolid}"/>
                            <Run Text=" æç¤ºï¼šåœ¨æœåŠ¡å™¨ç®¡ç†é¡µé¢é…ç½® RCON åŽå¯è¿œç¨‹å‘é€å‘½ä»¤"/>
