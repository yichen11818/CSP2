<Page x:Class="CSP2.Desktop.Views.Pages.PluginMarketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
      d:DataContext="{d:DesignInstance Type=viewmodels:PluginMarketViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="插件市场" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="#1f2937"/>
                <TextBlock Text="浏览和安装 CS2 服务器插件" 
                           FontSize="14" 
                           Foreground="#6b7280"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Content="🔄 刷新"
                    Command="{Binding RefreshCommand}"
                    Background="#f3f4f6"
                    Foreground="#374151"
                    Padding="15,10"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <!-- 过滤栏 -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- 服务器选择 -->
            <TextBlock Grid.Column="0"
                       Text="目标服务器:"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="#374151"
                       Margin="0,0,10,0"/>

            <ComboBox Grid.Column="1"
                      ItemsSource="{Binding Servers}"
                      SelectedItem="{Binding SelectedServer}"
                      DisplayMemberPath="Name"
                      Height="35"
                      VerticalContentAlignment="Center"
                      FontSize="14"/>

            <!-- 搜索框 -->
            <TextBox Grid.Column="3"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Height="35"
                     VerticalContentAlignment="Center"
                     Padding="12,0"
                     FontSize="14"
                     BorderBrush="#e5e7eb"
                     BorderThickness="1">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- 分类筛选 -->
            <TextBlock Grid.Column="5"
                       Text="分类:"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="#374151"
                       Margin="0,0,10,0"/>

            <ComboBox Grid.Column="6"
                      ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory}"
                      Height="35"
                      VerticalContentAlignment="Center"
                      FontSize="14"/>
        </Grid>

        <!-- 插件列表 -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding FilteredPlugins}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#e5e7eb" 
                                BorderThickness="1" 
                                CornerRadius="8"
                                Padding="20"
                                Margin="0,0,15,15"
                                Width="280"
                                Background="White">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="5" 
                                                ShadowDepth="2" 
                                                Opacity="0.1" 
                                                Color="Black"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 插件名称 -->
                                <TextBlock Grid.Row="0"
                                           Text="{Binding Name}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#1f2937"
                                           TextTrimming="CharacterEllipsis"/>

                                <!-- 作者和版本 -->
                                <Grid Grid.Row="1" Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{Binding Author}"
                                               FontSize="12"
                                               Foreground="#6b7280"/>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Version}"
                                               FontSize="12"
                                               Foreground="#6b7280"/>
                                </Grid>

                                <!-- 描述 -->
                                <TextBlock Grid.Row="2"
                                           Text="{Binding DescriptionZh}"
                                           FontSize="13"
                                           Foreground="#6b7280"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"
                                           MaxHeight="60"
                                           Margin="0,10,0,0"/>

                                <!-- 标签 -->
                                <StackPanel Grid.Row="3" 
                                            Orientation="Horizontal"
                                            Margin="0,10,0,0">
                                    <Border Background="#dbeafe"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,0,5,0">
                                        <TextBlock Text="{Binding Framework}"
                                                   FontSize="11"
                                                   Foreground="#1e40af"/>
                                    </Border>

                                    <Border Background="#fef3c7"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Visibility="{Binding Featured, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="推荐"
                                                   FontSize="11"
                                                   Foreground="#92400e"/>
                                    </Border>
                                </StackPanel>

                                <!-- 安装按钮 -->
                                <Button Grid.Row="4"
                                        Content="📥 安装"
                                        Command="{Binding DataContext.InstallPluginCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}"
                                        Background="{StaticResource PrimaryBrush}"
                                        Foreground="White"
                                        Padding="0,10"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Margin="0,15,0,0"
                                        HorizontalAlignment="Stretch">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="6"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 空状态提示 -->
        <StackPanel Grid.Row="2" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Visibility="{Binding FilteredPlugins.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <TextBlock Text="🧩" 
                       FontSize="64" 
                       HorizontalAlignment="Center"
                       Opacity="0.3"/>
            <TextBlock Text="没有找到插件" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Foreground="#6b7280"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
            <TextBlock Text="尝试调整搜索条件或分类" 
                       FontSize="14" 
                       Foreground="#9ca3af"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 加载提示 -->
        <Grid Grid.Row="2"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Background="#80FFFFFF">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⏳" 
                           FontSize="48" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="加载中..." 
                           FontSize="16" 
                           Foreground="#6b7280"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

