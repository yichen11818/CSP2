<UserControl x:Class="CSP2.Desktop.Views.Pages.PluginMarketPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
             xmlns:converters="clr-namespace:CSP2.Desktop.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodels:PluginMarketViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    
    <UserControl.Resources>
        <converters:BoolToStatusTextConverter x:Key="BoolToStatusTextConverter"/>
        <converters:BoolToInstallTextConverter x:Key="BoolToInstallTextConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer Style="{StaticResource ModernScrollViewer}"
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="{converters:Localization PluginMarket.Title}" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="{converters:Localization PluginMarket.Subtitle}" 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Content="🔄"
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource IconButtonStyle}"
                    ToolTip="{converters:Localization Common.Refresh}"
                    Width="40"
                    Height="40"
                    FontSize="16"
                    VerticalAlignment="Top"/>
        </Grid>

        <!-- 框架管理区域 -->
        <Border Grid.Row="1" 
                Style="{StaticResource CardStyle}"
                Padding="24"
                Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="🔧 插件框架管理"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,16"/>

                <!-- 服务器选择器 -->
                <Border Grid.Row="1"
                        Background="{StaticResource BackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="📂"
                                       FontSize="16"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="安装到服务器: "
                                       FontSize="14"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedServer.Name, FallbackValue='未选择服务器'}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"/>
                            <TextBlock Text="{Binding SelectedServer.InstallPath, FallbackValue='请在左侧选择一个服务器'}"
                                       FontSize="11"
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       Margin="0,2,0,0"
                                       TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding SelectedServer.InstallPath}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- CounterStrikeSharp 卡片 -->
                    <Border Grid.Column="0"
                            Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="⚡"
                                           FontSize="24"
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="CounterStrikeSharp"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="基于C#的CS2插件框架（会自动安装Metamod）"
                                               FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Margin="0,12,0,0">
                                <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="13">
                                    <Run Text="状态: "/>
                                    <Run Text="{Binding CssInstalled, Converter={StaticResource BoolToStatusTextConverter}}"
                                         FontWeight="SemiBold"/>
                                </TextBlock>
                                <TextBlock Foreground="{StaticResource TextSecondaryBrush}" 
                                           FontSize="13"
                                           Margin="0,4,0,0"
                                           Visibility="{Binding CssInstalled, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Run Text="版本: "/>
                                    <Run Text="{Binding CssVersion, FallbackValue=unknown}"
                                         FontWeight="SemiBold"/>
                                </TextBlock>
                                <TextBlock Text="💡 依赖 Metamod 会自动安装"
                                           Foreground="{StaticResource AccentBrush}"
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <Button Grid.Row="2"
                                    Content="{Binding CssInstalled, Converter={StaticResource BoolToInstallTextConverter}}"
                                    Command="{Binding InstallCssCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    IsEnabled="{Binding IsInstallingCss, Converter={StaticResource InverseBoolConverter}}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,12,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Metamod 卡片 -->
                    <Border Grid.Column="2"
                            Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <TextBlock Text="🔌"
                                           FontSize="24"
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="Metamod:Source"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="插件加载器基础框架"
                                               FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Margin="0,12,0,0">
                                <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="13">
                                    <Run Text="状态: "/>
                                    <Run Text="{Binding MetamodInstalled, Converter={StaticResource BoolToStatusTextConverter}}"
                                         FontWeight="SemiBold"/>
                                </TextBlock>
                                <TextBlock Foreground="{StaticResource TextSecondaryBrush}" 
                                           FontSize="13"
                                           Margin="0,4,0,0"
                                           Visibility="{Binding MetamodInstalled, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Run Text="版本: "/>
                                    <Run Text="{Binding MetamodVersion, FallbackValue=unknown}"
                                         FontWeight="SemiBold"/>
                                </TextBlock>
                            </StackPanel>

                            <Button Grid.Row="2"
                                    Content="{Binding MetamodInstalled, Converter={StaticResource BoolToInstallTextConverter}}"
                                    Command="{Binding InstallMetamodCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    IsEnabled="{Binding IsInstallingMetamod, Converter={StaticResource InverseBoolConverter}}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,12,0,0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- 过滤栏 -->
        <Border Grid.Row="2" 
                Style="{StaticResource CardStyle}"
                Padding="24"
                Margin="0,0,0,28">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!-- 服务器选择 -->
                <TextBlock Grid.Column="0"
                           Text="{converters:Localization PluginMarket.TargetServer}"
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,12,0"/>

                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding Servers}"
                          SelectedItem="{Binding SelectedServer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource ModernComboBox}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- 搜索框 -->
                <Border Grid.Column="3"
                        Background="{StaticResource BackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="{StaticResource SearchIcon}"
                                   FontFamily="{StaticResource FontAwesomeSolid}"
                                   FontSize="16"
                                   Margin="12,0,8,0"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource Gray400Brush}"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalContentAlignment="Center"
                                 Padding="0,8,12,8"
                                 FontSize="14">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                            Focusable="False"
                                                            HorizontalScrollBarVisibility="Hidden"
                                                            VerticalScrollBarVisibility="Hidden"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- 分类筛选 -->
                <TextBlock Grid.Column="5"
                           Text="{converters:Localization PluginMarket.Category}"
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,12,0"/>

                <ComboBox Grid.Column="6"
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}"
                          Style="{StaticResource ModernComboBox}"/>
            </Grid>
        </Border>

        <!-- 插件列表 -->
        <ItemsControl Grid.Row="3" ItemsSource="{Binding FilteredPlugins}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Padding="24"
                            Margin="0,0,20,20"
                            Width="320">
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                                    <Setter Property="Padding" Value="24"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.15" Color="{StaticResource ShadowColor}"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 插件名称 -->
                                <TextBlock Grid.Row="0"
                                           Text="{Binding Name}"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           TextTrimming="CharacterEllipsis"/>

                                <!-- 作者和版本 -->
                                <Grid Grid.Row="1" Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="👤"
                                                   FontSize="12"
                                                   Margin="0,0,4,0"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Author.Name}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <Border Grid.Column="1"
                                            Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="10"
                                            Padding="8,4">
                                        <TextBlock Text="{Binding Version}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </Border>
                                </Grid>

                                <!-- 统计信息（下载量和评分） -->
                                <Grid Grid.Row="2" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 下载量 -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="⬇"
                                                   FontSize="11"
                                                   Margin="0,0,4,0"
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock FontSize="12"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center">
                                            <Run Text="{Binding Downloads.Total, Mode=OneWay, FallbackValue=0}"/>
                                            <Run Text="次下载"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- 评分 -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="⭐"
                                                   FontSize="11"
                                                   Margin="0,0,4,0"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock FontSize="12"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   VerticalAlignment="Center">
                                            <Run Text="{Binding Rating.Average, Mode=OneWay, StringFormat=F1, FallbackValue=0.0}"/>
                                            <Run Text="(" Foreground="#999"/>
                                            <Run Text="{Binding Rating.Count, Mode=OneWay, FallbackValue=0}" Foreground="#999"/>
                                            <Run Text=")" Foreground="#999"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <!-- 描述 -->
                                <TextBlock Grid.Row="3"
                                           Text="{Binding DescriptionZh}"
                                           FontSize="14"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"
                                           MaxHeight="70"
                                           LineHeight="20"
                                           Margin="0,12,0,0"/>

                                <!-- 标签和徽章 -->
                                <WrapPanel Grid.Row="4" 
                                           Margin="0,16,0,0"
                                           Orientation="Horizontal">
                                    <!-- 框架标签 -->
                                    <Border Background="{StaticResource PrimaryPaleBrush}"
                                            CornerRadius="12"
                                            Padding="10,6"
                                            Margin="0,0,6,6">
                                        <TextBlock Text="{Binding Framework}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource PrimaryDarkBrush}"/>
                                    </Border>

                                    <!-- 推荐标记 -->
                                    <Border Background="{StaticResource WarningLightBrush}"
                                            CornerRadius="12"
                                            Padding="10,6"
                                            Margin="0,0,6,6"
                                            Visibility="{Binding Featured, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{StaticResource StarIcon}"
                                                       FontFamily="{StaticResource FontAwesomeSolid}"
                                                       FontSize="11"
                                                       Margin="0,0,4,0"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{converters:Localization PluginMarket.Featured}"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource WarningDarkBrush}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- 已验证标记 -->
                                    <Border Background="#064e3b"
                                            BorderBrush="#10b981"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="10,6"
                                            Margin="0,0,6,6"
                                            Visibility="{Binding Verified, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="✓"
                                                       FontSize="11"
                                                       FontWeight="Bold"
                                                       Margin="0,0,4,0"
                                                       Foreground="#6ee7b7"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="已验证"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="#6ee7b7"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- 官方支持标记 -->
                                    <Border Background="#1e3a8a"
                                            BorderBrush="#3b82f6"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="10,6"
                                            Margin="0,0,6,6"
                                            Visibility="{Binding OfficialSupport, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="⚡"
                                                       FontSize="11"
                                                       Margin="0,0,4,0"
                                                       Foreground="#93c5fd"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="官方支持"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="#93c5fd"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- 已安装标记 -->
                                    <Border Background="#0f766e"
                                            BorderBrush="#14b8a6"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="10,6"
                                            Margin="0,0,6,6"
                                            Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="✓"
                                                       FontSize="11"
                                                       FontWeight="Bold"
                                                       Margin="0,0,4,0"
                                                       Foreground="#5eead4"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="已安装"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="#5eead4"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- 有更新标记 -->
                                    <Border Background="#f97316"
                                            BorderBrush="#fb923c"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Padding="10,6"
                                            Margin="0,0,6,6"
                                            Visibility="{Binding HasUpdate, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🔄"
                                                       FontSize="11"
                                                       Margin="0,0,4,0"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="有更新"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </WrapPanel>

                                <!-- 安装按钮 -->
                                <Button Grid.Row="5"
                                        Command="{Binding DataContext.InstallPluginCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="0,16,0,0"
                                        HorizontalAlignment="Stretch"
                                        IsEnabled="{Binding IsInstalling, Converter={StaticResource InverseBoolConverter}}">
                                    <Button.Content>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="安装"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsInstalling}" Value="True">
                                                            <Setter Property="Text" Value="安装中..."/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding HasUpdate}" Value="True">
                                                            <Setter Property="Text" Value="更新"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                            <Setter Property="Text" Value="重新安装"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- 空状态提示 -->
        <Border Grid.Row="3" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Visibility="{Binding FilteredPlugins.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <StackPanel MaxWidth="400">
                <Border Background="{StaticResource SurfaceBrush}"
                        Width="120"
                        Height="120"
                        CornerRadius="60"
                        HorizontalAlignment="Center">
                    <TextBlock Text="{StaticResource PluginIcon}" 
                               FontFamily="{StaticResource FontAwesomeSolid}"
                               FontSize="64" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Opacity="0.6"/>
                </Border>
                <TextBlock Text="{converters:Localization PluginMarket.NoPlugins}" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,24,0,0"/>
                <TextBlock Text="{converters:Localization PluginMarket.NoPluginsHint}" 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,12,0,0"/>
            </StackPanel>
        </Border>

        <!-- 加载提示 -->
        <Grid Grid.Row="3"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Background="#80FFFFFF">
            <Border Background="{StaticResource CardBackgroundBrush}"
                    CornerRadius="16"
                    Padding="40,32"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.15" Color="{StaticResource ShadowColor}"/>
                </Border.Effect>
                <StackPanel>
                    <Border Background="{StaticResource PrimaryPaleBrush}"
                            Width="64"
                            Height="64"
                            CornerRadius="32"
                            HorizontalAlignment="Center">
                        <TextBlock Text="⏳" 
                                   FontSize="32" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="加载插件中..." 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"/>
                    <TextBlock Text="请稍候" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>

