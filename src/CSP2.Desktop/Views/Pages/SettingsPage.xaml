<UserControl x:Class="CSP2.Desktop.Views.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
             xmlns:converters="clr-namespace:CSP2.Desktop.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <TextBlock Text="{converters:Localization Settings.Title}" 
                       FontSize="32" 
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="{converters:Localization Settings.Subtitle}" 
                       FontSize="14" 
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- 设置内容 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 外观设置 -->
                <Border Style="{StaticResource CardStyle}"
                        Padding="28"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0"
                                    Background="{StaticResource PrimaryPaleBrush}"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="12"
                                    Margin="0,0,16,0">
                                <TextBlock Text="🎨" 
                                           FontSize="24"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{converters:Localization Settings.Appearance}" 
                                           FontSize="20" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="{converters:Localization Settings.AppearanceDesc}" 
                                           FontSize="13" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- 主题 -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="{converters:Localization Settings.Theme}" 
                                           FontSize="15" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="{converters:Localization Settings.ThemeDesc}" 
                                           FontSize="13" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Themes}"
                                      SelectedItem="{Binding Theme}"
                                      Width="220"
                                      HorizontalAlignment="Left"
                                      Style="{StaticResource ModernComboBox}"/>
                        </Grid>

                        <!-- 语言 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="{converters:Localization Settings.Language}" 
                                           FontSize="15" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="{converters:Localization Settings.LanguageDesc}" 
                                           FontSize="13" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Languages}"
                                      SelectedItem="{Binding SelectedLanguage}"
                                      Width="220"
                                      HorizontalAlignment="Left"
                                      Style="{StaticResource ModernComboBox}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 更新设置 -->
                <Border Style="{StaticResource CardStyle}"
                        Padding="28"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0"
                                    Background="{StaticResource InfoLightBrush}"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="12"
                                    Margin="0,0,16,0">
                                <TextBlock Text="🔄" 
                                           FontSize="24"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{converters:Localization Settings.Update}" 
                                           FontSize="20" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="{converters:Localization Settings.UpdateDesc}" 
                                           FontSize="13" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- 自动检查更新 -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="10"
                                Padding="20"
                                Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{converters:Localization Settings.AutoCheckUpdates}" 
                                               FontSize="15" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{converters:Localization Settings.AutoCheckUpdatesDesc}" 
                                               FontSize="13" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1"
                                          IsChecked="{Binding AutoCheckUpdates}"
                                          Style="{StaticResource ModernCheckBox}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- 关闭时最小化到托盘 -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="10"
                                Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{converters:Localization Settings.MinimizeToTray}" 
                                               FontSize="15" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{converters:Localization Settings.MinimizeToTrayDesc}" 
                                               FontSize="13" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1"
                                          IsChecked="{Binding MinimizeToTray}"
                                          Style="{StaticResource ModernCheckBox}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- SteamCMD设置 -->
                <Border Style="{StaticResource CardStyle}"
                        Padding="28">
                    <StackPanel>
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0"
                                    Background="{StaticResource WarningLightBrush}"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="12"
                                    Margin="0,0,16,0">
                                <TextBlock Text="⚙️" 
                                           FontSize="24"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{converters:Localization Settings.SteamCmd}" 
                                           FontSize="20" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="{converters:Localization Settings.SteamCmdDesc}" 
                                           FontSize="13" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- 状态信息 -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="20"
                                Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Background="{StaticResource SuccessLightBrush}"
                                        Width="32"
                                        Height="32"
                                        CornerRadius="16"
                                        Margin="0,0,12,0">
                                    <Ellipse Width="12" Height="12" 
                                            Fill="{StaticResource SuccessBrush}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{converters:Localization Settings.Status}"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextTertiaryBrush}"/>
                                    <TextBlock Text="{Binding SteamCmdStatus}"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               TextWrapping="Wrap"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="2"
                                        Content="🔄"
                                        Command="{Binding CheckSteamCmdStatusCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        ToolTip="{converters:Localization Settings.CheckStatus}"
                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- 安装/卸载按钮 -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Content="{converters:Localization Settings.InstallSteamCmd}"
                                    Command="{Binding InstallSteamCmdCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Stretch"/>

                            <Button Grid.Column="2"
                                    Content="{converters:Localization Settings.UninstallSteamCmd}"
                                    Command="{Binding UninstallSteamCmdCommand}"
                                    Style="{StaticResource DangerButtonStyle}"
                                    HorizontalAlignment="Stretch"/>
                        </Grid>

                        <!-- 安装进度 -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="20"
                                Margin="0,0,0,20"
                                Visibility="{Binding IsInstallingsteamCmd, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="{Binding InstallMessage}"
                                           FontSize="14"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,12"
                                           TextWrapping="Wrap"/>
                                <ProgressBar Value="{Binding InstallProgress}"
                                             Style="{StaticResource ModernProgressBar}"
                                             Height="8"
                                             Maximum="100"/>
                            </StackPanel>
                        </Border>

                        <!-- 安装路径 -->
                        <StackPanel Margin="0,0,0,20">
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="{converters:Localization Settings.InstallPath}" 
                                           FontSize="15" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="{converters:Localization Settings.InstallPathDesc}" 
                                           FontSize="13" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Text="{Binding SteamCmdPath}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,12,0"/>

                                <Button Grid.Column="1"
                                        Content="{converters:Localization Settings.Browse}"
                                        Command="{Binding BrowseSteamCmdPathCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                            </Grid>
                        </StackPanel>

                        <!-- 自动下载 -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="10"
                                Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{converters:Localization Settings.AutoDownloadSteamCmd}" 
                                               FontSize="15" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{converters:Localization Settings.AutoDownloadSteamCmdDesc}" 
                                               FontSize="13" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1"
                                          IsChecked="{Binding AutoDownloadSteamCmd}"
                                          Style="{StaticResource ModernCheckBox}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <Border Grid.Row="2" 
                Background="{StaticResource BackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,20,0,0"
                Margin="0,24,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="{converters:Localization Settings.RestoreDefaults}"
                        Command="{Binding ResetSettingsCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Padding="24,12"
                        HorizontalAlignment="Left"/>

                <Button Grid.Column="1"
                        Content="{converters:Localization Settings.Save}"
                        Command="{Binding SaveSettingsCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Padding="32,12"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>

