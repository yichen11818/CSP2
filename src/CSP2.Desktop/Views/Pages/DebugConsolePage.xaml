<UserControl x:Class="CSP2.Desktop.Views.Pages.DebugConsolePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:CSP2.Desktop.ViewModels"
             xmlns:converters="clr-namespace:CSP2.Desktop.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:DebugConsoleViewModel}"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <converters:LogLevelToColorConverter x:Key="LogLevelToColorConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <Border Grid.Row="0" Background="{DynamicResource BackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 过滤器 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="{converters:Localization DebugConsole.Title}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                    
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                    
                    <CheckBox Content="Debug" IsChecked="{Binding ShowDebug}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <CheckBox Content="Info" IsChecked="{Binding ShowInfo}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <CheckBox Content="Warning" IsChecked="{Binding ShowWarning}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <CheckBox Content="Error" IsChecked="{Binding ShowError}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0,0,10,0"/>
                    
                    <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                             Width="200" VerticalAlignment="Center"
                             ToolTip="{converters:Localization DebugConsole.FilterTooltip}"/>
                </StackPanel>

                <!-- 操作按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox Content="{converters:Localization DebugConsole.AutoScroll}" IsChecked="{Binding AutoScroll}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <Button Content="{converters:Localization DebugConsole.Export}" Command="{Binding ExportLogsCommand}" 
                            Padding="10,5" ToolTip="{converters:Localization DebugConsole.ExportTooltip}" Margin="0,0,10,0"/>
                    <Button Content="{converters:Localization DebugConsole.Clear}" Command="{Binding ClearLogsCommand}" 
                            Padding="10,5" ToolTip="{converters:Localization DebugConsole.ClearTooltip}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 日志列表 -->
        <Border Grid.Row="1" Background="{DynamicResource BackgroundBrush}">
            <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Logs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{DynamicResource BorderBrush}" 
                                    BorderThickness="0,0,0,1" Padding="10,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 时间戳 -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss.fff'}" 
                                               FontFamily="Consolas" FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>

                                    <!-- 级别 -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Level}" 
                                               FontWeight="Bold" FontSize="11"
                                               Foreground="{Binding Level, Converter={StaticResource LogLevelToColorConverter}}"
                                               Margin="10,0,0,0"/>

                                    <!-- 分类 -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Category}" 
                                               FontFamily="Consolas" FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="10,0,0,0"/>

                                    <!-- 消息 -->
                                    <StackPanel Grid.Column="3" Margin="10,0,0,0">
                                        <TextBlock Text="{Binding Message}" 
                                                   TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"/>
                                        <TextBlock Text="{Binding Exception}" 
                                                   TextWrapping="Wrap" FontFamily="Consolas" FontSize="10"
                                                   Foreground="Red" Margin="0,5,0,0"
                                                   Visibility="{Binding Exception, Converter={StaticResource StringToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

