             xmlns:converters="clr-namespace:CSP2.Desktop.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:DebugConsoleViewModel}"
             d:DesignHeight="600" d:DesignWidth="800">
    
