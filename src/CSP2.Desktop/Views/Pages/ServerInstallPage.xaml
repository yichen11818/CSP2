<UserControl x:Class="CSP2.Desktop.Views.Pages.ServerInstallPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
             xmlns:converters="clr-namespace:CSP2.Desktop.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodels:ServerInstallPageViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="{StaticResource PrimaryPaleBrush}"
                        Width="80"
                        Height="80"
                        CornerRadius="40"
                        Margin="0,0,24,0">
                    <TextBlock Text="⬇️"
                               FontSize="40"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{converters:Localization ServerInstall.SelectMode}" 
                               FontSize="36" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="{converters:Localization ServerInstall.SelectModeDesc}" 
                               FontSize="16" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>

            <!-- 提示信息 -->
            <Border Margin="0,24,0,0" 
                    Background="{StaticResource InfoLightBrush}"
                    BorderBrush="{StaticResource InfoBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ℹ️" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Top"/>
                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}">
                        <Run Text="此页面仅用于下载CS2服务器文件。" FontWeight="Bold"/>
                        <LineBreak/>
                        <Run Text="下载完成后，请通过"/>
                        <Run Text="「添加服务器」" FontWeight="Bold"/>
                        <Run Text="按钮配置并添加服务器到管理列表。"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- 主内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!-- 选择下载方式 -->
                <StackPanel>
                    <TextBlock Text="选择下载方式" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,32"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- SteamCMD 选项 -->
                        <Border Grid.Column="0"
                                Style="{StaticResource HoverCardStyle}"
                                Padding="32"
                                Cursor="Hand"
                                MouseDown="SteamCmdOption_Click">
                            <StackPanel>
                                <Border Background="{StaticResource PrimaryPaleBrush}"
                                        Width="80"
                                        Height="80"
                                        CornerRadius="40"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,24">
                                    <TextBlock Text="📦"
                                               FontSize="40"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>

                                <TextBlock Text="{converters:Localization ServerInstall.SteamCmdMode}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,12"/>
                                
                                <TextBlock Text="{converters:Localization ServerInstall.SteamCmdModeDesc}"
                                           FontSize="15"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,16"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Border Background="{StaticResource SuccessLightBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="4">
                                        <TextBlock Text="{converters:Localization ServerInstall.SteamCmdTagRecommended}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource SuccessBrush}"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="{StaticResource InfoLightBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="4">
                                        <TextBlock Text="{converters:Localization ServerInstall.SteamCmdTagAutoUpdate}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource InfoBrush}"/>
                                    </Border>
                                    <Border Background="{StaticResource InfoLightBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="4">
                                        <TextBlock Text="{converters:Localization ServerInstall.SteamCmdTagManaged}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource InfoBrush}"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="{converters:Localization ServerInstall.SteamCmdSizeNote}"
                                           FontSize="12"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,16,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 使用现有安装选项 -->
                        <Border Grid.Column="2"
                                Style="{StaticResource HoverCardStyle}"
                                Padding="32"
                                Cursor="Hand"
                                MouseDown="ExistingOption_Click">
                            <StackPanel>
                                <Border Background="{StaticResource InfoLightBrush}"
                                        Width="80"
                                        Height="80"
                                        CornerRadius="40"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,24">
                                    <TextBlock Text="📁"
                                               FontSize="40"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>

                                <TextBlock Text="{converters:Localization ServerInstall.ExistingMode}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,12"/>
                                
                                <TextBlock Text="{Binding ScanMessage}"
                                           FontSize="15"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           Margin="0,0,0,16"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Border Background="{StaticResource WarningLightBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="4">
                                        <TextBlock Text="{converters:Localization ServerInstall.ExistingTagFast}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource WarningBrush}"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="{StaticResource InfoLightBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="4">
                                        <TextBlock Text="{converters:Localization ServerInstall.ExistingTagShared}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource InfoBrush}"/>
                                    </Border>
                                    <Border Background="{StaticResource InfoLightBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="4">
                                        <TextBlock Text="{converters:Localization ServerInstall.ExistingTagFast}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource InfoBrush}"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="{converters:Localization ServerInstall.ExistingSizeNote}"
                                           FontSize="12"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,16,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- 下载提示 -->
                    <Border Background="{StaticResource SuccessLightBrush}"
                            BorderBrush="{StaticResource SuccessBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20"
                            Margin="32,32,32,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✅" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Top"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="💡 下载完成后的操作：" FontWeight="Bold"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="1. 返回"/>
                                <Run Text="「服务器管理」" FontWeight="Bold"/>
                                <Run Text="页面"/>
                                <LineBreak/>
                                <Run Text="2. 点击"/>
                                <Run Text="「➕ 添加服务器」" FontWeight="Bold"/>
                                <Run Text="按钮"/>
                                <LineBreak/>
                                <Run Text="3. 选择刚才下载的服务器路径，完成配置"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="📦 下载任务可以在"/>
                                <Run Text="「下载管理」" FontWeight="Bold"/>
                                <Run Text="页面查看进度。"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <Grid Grid.Row="2" Margin="0,32,0,0">
            <Button Content="🏠 返回服务器管理"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center"
                    Padding="32,14"
                    Width="200"
                    FontSize="15"/>
        </Grid>
    </Grid>
</UserControl>

