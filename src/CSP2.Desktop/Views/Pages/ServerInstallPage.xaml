<UserControl x:Class="CSP2.Desktop.Views.Pages.ServerInstallPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
             xmlns:converters="clr-namespace:CSP2.Desktop.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodels:ServerInstallPageViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="{StaticResource PrimaryPaleBrush}"
                        Width="80"
                        Height="80"
                        CornerRadius="40"
                        Margin="0,0,24,0">
                    <TextBlock Text="⬇️"
                               FontSize="40"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{converters:Localization ServerInstall.SelectMode}" 
                               FontSize="36" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="{converters:Localization ServerInstall.SelectModeDesc}" 
                               FontSize="16" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>

            <!-- 步骤指示器 -->
            <Grid Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 步骤1 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Width="36" Height="36" CornerRadius="18" Margin="0,0,12,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentStep}" Value="1">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CurrentStep}" Value="2">
                                        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="1" FontSize="18" FontWeight="Bold" Foreground="White" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="{converters:Localization ServerInstall.Step1}" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 步骤2 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Width="36" Height="36" CornerRadius="18" Margin="0,0,12,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource Gray300Brush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentStep}" Value="2">
                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="2" FontSize="18" FontWeight="Bold" Foreground="White" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="{converters:Localization ServerInstall.Step2}" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- 主内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!-- 步骤1：选择安装方式 -->
                <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=1}">
                    <TextBlock Text="{converters:Localization ServerInstall.SelectModeDesc}" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,32"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- SteamCMD 选项 -->
                        <Border Grid.Column="0"
                                Style="{StaticResource HoverCardStyle}"
                                Padding="32"
                                Cursor="Hand"
                                MouseDown="SteamCmdOption_Click">
                            <StackPanel>
                                <Border Background="{StaticResource PrimaryPaleBrush}"
                                        Width="80"
                                        Height="80"
                                        CornerRadius="40"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,24">
                                    <TextBlock Text="📦"
                                               FontSize="40"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>

                                <TextBlock Text="{converters:Localization ServerInstall.SteamCmdMode}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,12"/>
                                
                                <TextBlock Text="{converters:Localization ServerInstall.SteamCmdModeDesc}"
                                           FontSize="15"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,16"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Border Background="{StaticResource SuccessLightBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="4">
                                        <TextBlock Text="{converters:Localization ServerInstall.SteamCmdTagRecommended}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource SuccessBrush}"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="{StaticResource InfoLightBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="4">
                                        <TextBlock Text="{converters:Localization ServerInstall.SteamCmdTagAutoUpdate}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource InfoBrush}"/>
                                    </Border>
                                    <Border Background="{StaticResource InfoLightBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="4">
                                        <TextBlock Text="{converters:Localization ServerInstall.SteamCmdTagManaged}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource InfoBrush}"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="{converters:Localization ServerInstall.SteamCmdSizeNote}"
                                           FontSize="12"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,16,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 使用现有安装选项 -->
                        <Border Grid.Column="2"
                                Style="{StaticResource HoverCardStyle}"
                                Padding="32"
                                Cursor="Hand"
                                MouseDown="ExistingOption_Click">
                            <StackPanel>
                                <Border Background="{StaticResource InfoLightBrush}"
                                        Width="80"
                                        Height="80"
                                        CornerRadius="40"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,24">
                                    <TextBlock Text="📁"
                                               FontSize="40"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>

                                <TextBlock Text="{converters:Localization ServerInstall.ExistingMode}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,12"/>
                                
                                <TextBlock Text="{Binding ScanMessage}"
                                           FontSize="15"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           Margin="0,0,0,16"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Border Background="{StaticResource WarningLightBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="4">
                                        <TextBlock Text="{converters:Localization ServerInstall.ExistingTagFast}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource WarningBrush}"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="{StaticResource InfoLightBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="4">
                                        <TextBlock Text="{converters:Localization ServerInstall.ExistingTagShared}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource InfoBrush}"/>
                                    </Border>
                                    <Border Background="{StaticResource InfoLightBrush}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            Margin="4">
                                        <TextBlock Text="{converters:Localization ServerInstall.ExistingTagFast}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource InfoBrush}"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="{converters:Localization ServerInstall.ExistingSizeNote}"
                                           FontSize="12"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,16,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- 步骤2：配置服务器 -->
                <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=2}">
                    <TextBlock Text="{converters:Localization ServerInstall.ServerInfo}" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,24"/>

                    <!-- 服务器名称 -->
                    <TextBlock Text="{converters:Localization ServerInstall.ServerName}" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding ServerName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,24"/>

                    <!-- 安装路径（SteamCMD模式） -->
                    <StackPanel Visibility="{Binding SelectedMode, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=steamcmd}">
                        <TextBlock Text="{converters:Localization ServerInstall.DownloadPath}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        <Grid Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding InstallPath, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                            <Button Grid.Column="1"
                                    Content="{converters:Localization ServerInstall.BrowsePath}"
                                    Command="{Binding BrowseInstallPathCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="12,0,0,0"
                                    Padding="16,10"/>
                        </Grid>
                        <TextBlock Text="{converters:Localization ServerInstall.DownloadPathDesc}" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   Margin="0,0,0,24"/>
                    </StackPanel>

                    <!-- 选择现有安装（现有安装模式） -->
                    <StackPanel Visibility="{Binding SelectedMode, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=existing}">
                        <TextBlock Text="{converters:Localization ServerInstall.SelectInstallation}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding DetectedInstallations}"
                                  SelectedItem="{Binding SelectedInstallation}"
                                  Style="{StaticResource ModernComboBox}"
                                  Margin="0,0,0,24">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Source}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding InstallPath}" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- 配置说明 -->
                    <Border Background="{StaticResource InfoLightBrush}"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,24">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ℹ️" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Top"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="服务器配置（端口、地图等）可以在添加后通过"/>
                                <Run Text="编辑服务器设置" FontWeight="Bold"/>
                                <Run Text="或"/>
                                <Run Text="启动参数" FontWeight="Bold"/>
                                <Run Text="进行修改。"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="💡 提示：" FontWeight="Bold"/>
                                <Run Text="点击确认后，服务器将被添加到列表，下载任务将在后台进行。你可以在"/>
                                <Run Text="下载管理" FontWeight="Bold"/>
                                <Run Text="页面查看下载进度。"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <Grid Grid.Row="2" Margin="0,32,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="{converters:Localization Common.Cancel}"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    HorizontalAlignment="Left"
                    Padding="24,14"
                    Width="140"
                    FontSize="15"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="{converters:Localization ServerInstall.BackToStepOne}"
                        Command="{Binding BackToStepOneCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Padding="24,14"
                        Width="140"
                        FontSize="15"
                        Visibility="{Binding CurrentStep, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=2}"/>

                <Button Content="{converters:Localization ServerInstall.StartInstall}"
                        Command="{Binding StartInstallCommand}"
                        Style="{StaticResource SuccessButtonStyle}"
                        Padding="24,14"
                        Width="160"
                        FontSize="15"
                        Margin="16,0,0,0"
                        Visibility="{Binding CurrentStep, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=2}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

