<UserControl x:Class="CSP2.Desktop.Views.Pages.ServerManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
             xmlns:converters="clr-namespace:CSP2.Desktop.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodels:ServerManagementViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <!-- 通用按钮样式 -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 顶部按钮样式 -->
        <Style x:Key="TopButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{converters:Localization ServerMgmt.Title}" 
                               FontSize="32" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="{converters:Localization ServerMgmt.Subtitle}" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                    <!-- 添加服务器 - 主要操作 -->
                    <Button Content="添加服务器"
                            Tag="{StaticResource AddIcon}"
                            Command="{Binding AddServerCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            FontSize="15"
                            Padding="20,12"/>
                    
                    <!-- 下载CS2服务器 - 辅助操作（仅下载） -->
                    <Button Content="下载CS2"
                            Tag="{StaticResource DownloadIcon}"
                            Command="{Binding InstallServerCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="12,0,0,0"
                            ToolTip="下载CS2服务器文件（不包含配置）"/>
                    
                    <Button Tag="{StaticResource RefreshIcon}"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTip="{converters:Localization ServerMgmt.Refresh}"
                            Margin="12,0,0,0"
                            Width="44"
                            Height="44"
                            FontSize="16"/>
                </StackPanel>
            </Grid>
            
            <!-- 状态消息 -->
            <Border Grid.Row="1"
                    Margin="0,16,0,0"
                    Padding="16,12"
                    CornerRadius="10"
                    Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource InfoLightBrush}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource InfoBrush}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasError}" Value="True">
                                <Setter Property="Background" Value="{StaticResource DangerLightBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{StaticResource InfoIcon}" 
                                              Style="{StaticResource BaseIconStyle}"
                                              FontSize="16" 
                                              Margin="0,0,10,0" 
                                              VerticalAlignment="Center"
                                              Foreground="{StaticResource InfoBrush}"/>
                                    <TextBlock Text="{Binding StatusMessage}"
                                               FontSize="14"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
            </Border>
        </Grid>

        <!-- 服务器列表 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
            <ItemsControl ItemsSource="{Binding Servers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="24"
                                Margin="0,0,0,16">
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                                    <Setter Property="Padding" Value="24"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.12" Color="{StaticResource ShadowColor}"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 服务器标题和状态 -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="22" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding InstallPath}" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,6,0,0"
                                                   Opacity="0.9"/>
                                    </StackPanel>

                                    <Border Grid.Column="1" 
                                            Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                            CornerRadius="20"
                                            Padding="16,8">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="8" Height="8" 
                                                    Fill="White" 
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Status, Converter={StaticResource StatusToTextConverter}}" 
                                                       Foreground="White"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- 服务器信息 -->
                                <Grid Grid.Row="1" Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" 
                                            CornerRadius="8" Padding="12,10">
                                        <StackPanel>
                                            <TextBlock Text="{converters:Localization ServerMgmt.Port}" 
                                                      FontSize="11" 
                                                      Foreground="{StaticResource TextTertiaryBrush}"
                                                      FontWeight="Medium"/>
                                            <TextBlock Text="{Binding Config.Port}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}" 
                                            CornerRadius="8" Padding="12,10" Margin="12,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="{converters:Localization ServerMgmt.Map}" 
                                                      FontSize="11" 
                                                      Foreground="{StaticResource TextTertiaryBrush}"
                                                      FontWeight="Medium"/>
                                            <TextBlock Text="{Binding Config.Map}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="2" Background="{StaticResource SurfaceBrush}" 
                                            CornerRadius="8" Padding="12,10" Margin="12,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="{converters:Localization ServerMgmt.MaxPlayers}" 
                                                      FontSize="11" 
                                                      Foreground="{StaticResource TextTertiaryBrush}"
                                                      FontWeight="Medium"/>
                                            <TextBlock Text="{Binding Config.MaxPlayers}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="3" Background="{StaticResource SurfaceBrush}" 
                                            CornerRadius="8" Padding="12,10" Margin="12,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="{converters:Localization ServerMgmt.TickRate}" 
                                                      FontSize="11" 
                                                      Foreground="{StaticResource TextTertiaryBrush}"
                                                      FontWeight="Medium"/>
                                            <TextBlock Text="{Binding Config.TickRate}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- 操作按钮 -->
                                <Grid Grid.Row="2" Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 主要操作 -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <Button Content="{converters:Localization ServerMgmt.Start}"
                                                Tag="{StaticResource PlayIcon}"
                                                Command="{Binding DataContext.StartServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SuccessButtonStyle}"
                                                Padding="16,10"/>

                                        <Button Content="{converters:Localization ServerMgmt.Stop}"
                                                Tag="{StaticResource StopIcon}"
                                                Command="{Binding DataContext.StopServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource DangerButtonStyle}"
                                                Padding="16,10"
                                                Margin="10,0,0,0"/>

                                        <Button Content="{converters:Localization ServerMgmt.Restart}"
                                                Tag="{StaticResource RestartIcon}"
                                                Command="{Binding DataContext.RestartServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource WarningButtonStyle}"
                                                Padding="16,10"
                                                Margin="10,0,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- 次要操作 -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Content="{converters:Localization ServerMgmt.ViewLog}"
                                                Tag="{StaticResource ViewIcon}"
                                                Command="{Binding DataContext.ViewServerLogCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Padding="16,10"/>

                                        <Button Content="{converters:Localization ServerMgmt.Settings}"
                                                Tag="{StaticResource SettingsIcon}"
                                                Command="{Binding DataContext.EditServerSettingsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Padding="16,10"
                                                Margin="10,0,0,0"/>

                                        <Button Tag="{StaticResource DeleteIcon}"
                                                Command="{Binding DataContext.UninstallServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="{converters:Localization ServerMgmt.UninstallTooltip}"
                                                Width="44"
                                                Height="44"
                                                FontSize="16"
                                                Margin="10,0,0,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource DangerLightBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Opacity" Value="0.3"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button Tag="{StaticResource DeleteIcon}"
                                                Command="{Binding DataContext.DeleteServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="{converters:Localization ServerMgmt.DeleteTooltip}"
                                                Width="44"
                                                Height="44"
                                                FontSize="16"
                                                Margin="10,0,0,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 空状态提示 -->
        <Border Grid.Row="1" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Visibility="{Binding Servers.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <StackPanel MaxWidth="400">
                <Border Background="{StaticResource SurfaceBrush}"
                        Width="120"
                        Height="120"
                        CornerRadius="60"
                        HorizontalAlignment="Center">
                    <TextBlock Text="{StaticResource ServerIcon}" 
                               Style="{StaticResource BaseIconStyle}"
                               FontSize="64" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource Gray400Brush}"
                               Opacity="0.6"/>
                </Border>
                <TextBlock Text="{converters:Localization ServerMgmt.NoServers}" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,24,0,0"/>
                <TextBlock Text="{converters:Localization ServerMgmt.NoServersHint}" 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,12,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

