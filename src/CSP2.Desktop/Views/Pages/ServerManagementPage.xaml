<UserControl x:Class="CSP2.Desktop.Views.Pages.ServerManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
             xmlns:converters="clr-namespace:CSP2.Desktop.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodels:ServerManagementViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <!-- é€šç”¨æŒ‰é’®æ ·å¼ -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- é¡¶éƒ¨æŒ‰é’®æ ·å¼ -->
        <Style x:Key="TopButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- æ ‡é¢˜æ  -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{converters:Localization ServerMgmt.Title}" 
                               FontSize="32" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="{converters:Localization ServerMgmt.Subtitle}" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button Content="{converters:Localization ServerMgmt.InstallServer}"
                            Command="{Binding InstallServerCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                    
                    <Button Content="{converters:Localization ServerMgmt.AddServer}"
                            Command="{Binding AddServerCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="12,0,0,0"/>
                    
                    <Button Content="ðŸ”„"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTip="{converters:Localization ServerMgmt.Refresh}"
                            Margin="12,0,0,0"
                            Width="40"
                            Height="40"
                            FontSize="16"/>
                </StackPanel>
            </Grid>
            
            <!-- çŠ¶æ€æ¶ˆæ¯ -->
            <Border Grid.Row="1"
                    Margin="0,16,0,0"
                    Padding="16,12"
                    CornerRadius="10"
                    Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource InfoLightBrush}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource InfoBrush}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasError}" Value="True">
                                <Setter Property="Background" Value="{StaticResource DangerLightBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â„¹ï¸" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="14"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- æœåŠ¡å™¨åˆ—è¡¨ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
            <ItemsControl ItemsSource="{Binding Servers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="24"
                                Margin="0,0,0,16">
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                                    <Setter Property="Padding" Value="24"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.12" Color="{StaticResource ShadowColor}"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- æœåŠ¡å™¨æ ‡é¢˜å’ŒçŠ¶æ€ -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="22" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding InstallPath}" 
                                                   FontSize="13" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,6,0,0"
                                                   Opacity="0.9"/>
                                    </StackPanel>

                                    <Border Grid.Column="1" 
                                            Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                            CornerRadius="20"
                                            Padding="16,8">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="8" Height="8" 
                                                    Fill="White" 
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Status, Converter={StaticResource StatusToTextConverter}}" 
                                                       Foreground="White"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- æœåŠ¡å™¨ä¿¡æ¯ -->
                                <Grid Grid.Row="1" Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" 
                                            CornerRadius="8" Padding="12,10">
                                        <StackPanel>
                                            <TextBlock Text="{converters:Localization ServerMgmt.Port}" 
                                                      FontSize="11" 
                                                      Foreground="{StaticResource TextTertiaryBrush}"
                                                      FontWeight="Medium"/>
                                            <TextBlock Text="{Binding Config.Port}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}" 
                                            CornerRadius="8" Padding="12,10" Margin="12,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="{converters:Localization ServerMgmt.Map}" 
                                                      FontSize="11" 
                                                      Foreground="{StaticResource TextTertiaryBrush}"
                                                      FontWeight="Medium"/>
                                            <TextBlock Text="{Binding Config.Map}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="2" Background="{StaticResource SurfaceBrush}" 
                                            CornerRadius="8" Padding="12,10" Margin="12,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="{converters:Localization ServerMgmt.MaxPlayers}" 
                                                      FontSize="11" 
                                                      Foreground="{StaticResource TextTertiaryBrush}"
                                                      FontWeight="Medium"/>
                                            <TextBlock Text="{Binding Config.MaxPlayers}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="3" Background="{StaticResource SurfaceBrush}" 
                                            CornerRadius="8" Padding="12,10" Margin="12,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="{converters:Localization ServerMgmt.TickRate}" 
                                                      FontSize="11" 
                                                      Foreground="{StaticResource TextTertiaryBrush}"
                                                      FontWeight="Medium"/>
                                            <TextBlock Text="{Binding Config.TickRate}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- æ“ä½œæŒ‰é’® -->
                                <Grid Grid.Row="2" Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- ä¸»è¦æ“ä½œ -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <Button Content="{converters:Localization ServerMgmt.Start}"
                                                Command="{Binding DataContext.StartServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SuccessButtonStyle}"
                                                Padding="16,10"/>

                                        <Button Content="{converters:Localization ServerMgmt.Stop}"
                                                Command="{Binding DataContext.StopServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource DangerButtonStyle}"
                                                Padding="16,10"
                                                Margin="10,0,0,0"/>

                                        <Button Content="{converters:Localization ServerMgmt.Restart}"
                                                Command="{Binding DataContext.RestartServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource WarningButtonStyle}"
                                                Padding="16,10"
                                                Margin="10,0,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- æ¬¡è¦æ“ä½œ -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Content="{converters:Localization ServerMgmt.ViewLog}"
                                                Command="{Binding DataContext.ViewServerLogCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Padding="16,10"/>

                                        <Button Content="{converters:Localization ServerMgmt.Settings}"
                                                Command="{Binding DataContext.EditServerSettingsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Padding="16,10"
                                                Margin="10,0,0,0"/>

                                        <Button Content="ðŸ’£"
                                                Command="{Binding DataContext.UninstallServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="{converters:Localization ServerMgmt.UninstallTooltip}"
                                                Width="40"
                                                Height="40"
                                                FontSize="16"
                                                Margin="10,0,0,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource DangerLightBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Opacity" Value="0.3"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button Content="ðŸ—‘ï¸"
                                                Command="{Binding DataContext.DeleteServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="{converters:Localization ServerMgmt.DeleteTooltip}"
                                                Width="40"
                                                Height="40"
                                                FontSize="16"
                                                Margin="10,0,0,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource WarningLightBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- ç©ºçŠ¶æ€æç¤º -->
        <Border Grid.Row="1" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Visibility="{Binding Servers.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <StackPanel MaxWidth="400">
                <Border Background="{StaticResource SurfaceBrush}"
                        Width="120"
                        Height="120"
                        CornerRadius="60"
                        HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“¦" 
                               FontSize="64" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Opacity="0.6"/>
                </Border>
                <TextBlock Text="{converters:Localization ServerMgmt.NoServers}" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,24,0,0"/>
                <TextBlock Text="{converters:Localization ServerMgmt.NoServersHint}" 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,12,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

