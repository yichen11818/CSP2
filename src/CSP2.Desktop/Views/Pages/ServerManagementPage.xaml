<UserControl x:Class="CSP2.Desktop.Views.Pages.ServerManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
             xmlns:converters="clr-namespace:CSP2.Desktop.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodels:ServerManagementViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <!-- 通用按钮样式 -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 顶部按钮样式 -->
        <Style x:Key="TopButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{converters:Localization ServerMgmt.Title}" 
                               FontSize="32" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="{converters:Localization ServerMgmt.Subtitle}" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                    <!-- 添加服务器 - 主要操作 -->
                    <Button Content="添加服务器"
                            Tag="{StaticResource AddIcon}"
                            Command="{Binding AddServerCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            FontSize="15"
                            Padding="20,12"/>
                    
                    <!-- 下载CS2服务器 - 辅助操作（仅下载） -->
                    <Button Content="下载CS2"
                            Tag="{StaticResource DownloadIcon}"
                            Command="{Binding InstallServerCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="12,0,0,0"
                            ToolTip="下载CS2服务器文件（不包含配置）"/>
                    
                    <Button Tag="{StaticResource RefreshIcon}"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTip="{converters:Localization ServerMgmt.Refresh}"
                            Margin="12,0,0,0"
                            Width="44"
                            Height="44"
                            FontSize="16"/>
                </StackPanel>
            </Grid>
            
            <!-- 状态消息 -->
            <Border Grid.Row="1"
                    Margin="0,16,0,0"
                    Padding="16,12"
                    CornerRadius="10"
                    Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource InfoLightBrush}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource InfoBrush}"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasError}" Value="True">
                                <Setter Property="Background" Value="{StaticResource DangerLightBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{StaticResource InfoIcon}" 
                                              Style="{StaticResource BaseIconStyle}"
                                              FontSize="16" 
                                              Margin="0,0,10,0" 
                                              VerticalAlignment="Center"
                                              Foreground="{StaticResource InfoBrush}"/>
                                    <TextBlock Text="{Binding StatusMessage}"
                                               FontSize="14"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
            </Border>
        </Grid>

        <!-- 服务器列表 - 现代化网格设计 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
            <ItemsControl ItemsSource="{Binding Servers}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="380" Height="180"
                                Margin="0,0,16,16"
                                Background="{StaticResource CardBackgroundBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="20">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.08" Color="{StaticResource ShadowColor}"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.15" Color="{StaticResource ShadowColor}"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 顶部：状态点 + 名称 + 菜单 -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 状态指示点 -->
                                    <Ellipse Grid.Column="0" 
                                             Width="12" Height="12" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,12,0">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="{StaticResource Gray400Brush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Running">
                                                        <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Stopped">
                                                        <Setter Property="Fill" Value="{StaticResource DangerBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Starting">
                                                        <Setter Property="Fill" Value="{StaticResource WarningBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>

                                    <!-- 服务器名称 -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="16" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Status, Converter={StaticResource StatusToTextConverter}}" 
                                                   FontSize="11" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <!-- 快捷菜单 -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Tag="{StaticResource SettingsIcon}"
                                                Command="{Binding DataContext.EditServerSettingsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource IconButtonStyle}"
                                                Width="32" Height="32"
                                                FontSize="14"
                                                Margin="4,0,0,0"
                                                ToolTip="{converters:Localization ServerMgmt.Settings}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- 中间：服务器信息 + 资源用量 -->
                                <Grid Grid.Row="1" Margin="0,16,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- 信息行 -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- 端口 -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="端口" 
                                                       FontSize="10" 
                                                       Foreground="{StaticResource TextTertiaryBrush}"
                                                       Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Config.Port}" 
                                                       FontSize="14" 
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </StackPanel>

                                        <!-- 地图 -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="地图" 
                                                       FontSize="10" 
                                                       Foreground="{StaticResource TextTertiaryBrush}"
                                                       Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Config.Map}" 
                                                       FontSize="14" 
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <!-- 玩家 -->
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="玩家" 
                                                       FontSize="10" 
                                                       Foreground="{StaticResource TextTertiaryBrush}"
                                                       Margin="0,0,0,4"/>
                                            <TextBlock FontSize="14" 
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}">
                                                <Run Text="0"/>
                                                <Run Text="/"/>
                                                <Run Text="{Binding Config.MaxPlayers}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>

                                    <!-- 资源用量进度条 -->
                                    <StackPanel Grid.Row="1" Margin="0,16,0,0">
                                        <!-- CPU 使用率 -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="CPU" 
                                                       FontSize="10"
                                                       Foreground="{StaticResource TextTertiaryBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                            
                                            <Border Grid.Column="1" 
                                                    Height="6" 
                                                    Background="{StaticResource SurfaceBrush}"
                                                    CornerRadius="3">
                                                <Border HorizontalAlignment="Left" 
                                                        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}, Converter={StaticResource PercentageWidthConverter}, ConverterParameter=45}"
                                                        Background="{StaticResource PrimaryBrush}"
                                                        CornerRadius="3"/>
                                            </Border>
                                            
                                            <TextBlock Grid.Column="2" 
                                                       Text="45%" 
                                                       FontSize="10"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="8,0,0,0"
                                                       VerticalAlignment="Center"/>
                                        </Grid>

                                        <!-- 内存使用率 -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="MEM" 
                                                       FontSize="10"
                                                       Foreground="{StaticResource TextTertiaryBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                            
                                            <Border Grid.Column="1" 
                                                    Height="6" 
                                                    Background="{StaticResource SurfaceBrush}"
                                                    CornerRadius="3">
                                                <Border HorizontalAlignment="Left" 
                                                        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}, Converter={StaticResource PercentageWidthConverter}, ConverterParameter=62}"
                                                        Background="{StaticResource SuccessBrush}"
                                                        CornerRadius="3"/>
                                            </Border>
                                            
                                            <TextBlock Grid.Column="2" 
                                                       Text="62%" 
                                                       FontSize="10"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="8,0,0,0"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>

                                <!-- 底部：操作按钮 -->
                                <Grid Grid.Row="2" Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 启动按钮 -->
                                    <Button Grid.Column="0"
                                            Tag="{StaticResource PlayIcon}"
                                            Command="{Binding DataContext.StartServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IconButtonStyle}"
                                            Width="36" Height="36"
                                            FontSize="14"
                                            ToolTip="{converters:Localization ServerMgmt.Start}">
                                        <Button.Background>
                                            <SolidColorBrush Color="#10b981" Opacity="0.15"/>
                                        </Button.Background>
                                        <Button.Foreground>
                                            <SolidColorBrush Color="#10b981"/>
                                        </Button.Foreground>
                                    </Button>

                                    <!-- 停止按钮 -->
                                    <Button Grid.Column="1"
                                            Tag="{StaticResource StopIcon}"
                                            Command="{Binding DataContext.StopServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IconButtonStyle}"
                                            Width="36" Height="36"
                                            FontSize="14"
                                            Margin="8,0,0,0"
                                            ToolTip="{converters:Localization ServerMgmt.Stop}">
                                        <Button.Background>
                                            <SolidColorBrush Color="#ef4444" Opacity="0.15"/>
                                        </Button.Background>
                                        <Button.Foreground>
                                            <SolidColorBrush Color="#ef4444"/>
                                        </Button.Foreground>
                                    </Button>

                                    <!-- 重启按钮 -->
                                    <Button Grid.Column="2"
                                            Tag="{StaticResource RestartIcon}"
                                            Command="{Binding DataContext.RestartServerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IconButtonStyle}"
                                            Width="36" Height="36"
                                            FontSize="14"
                                            Margin="8,0,0,0"
                                            ToolTip="{converters:Localization ServerMgmt.Restart}">
                                        <Button.Background>
                                            <SolidColorBrush Color="#fbbf24" Opacity="0.15"/>
                                        </Button.Background>
                                        <Button.Foreground>
                                            <SolidColorBrush Color="#fbbf24"/>
                                        </Button.Foreground>
                                    </Button>

                                    <!-- 日志按钮 -->
                                    <Button Grid.Column="3"
                                            Tag="{StaticResource ViewIcon}"
                                            Command="{Binding DataContext.ViewServerLogCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IconButtonStyle}"
                                            Width="36" Height="36"
                                            FontSize="14"
                                            Margin="8,0,0,0"
                                            ToolTip="{converters:Localization ServerMgmt.ViewLog}"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 空状态提示 -->
        <Border Grid.Row="1" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Visibility="{Binding Servers.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <StackPanel MaxWidth="400">
                <Border Background="{StaticResource SurfaceBrush}"
                        Width="120"
                        Height="120"
                        CornerRadius="60"
                        HorizontalAlignment="Center">
                    <TextBlock Text="{StaticResource ServerIcon}" 
                               Style="{StaticResource BaseIconStyle}"
                               FontSize="64" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource Gray400Brush}"
                               Opacity="0.6"/>
                </Border>
                <TextBlock Text="{converters:Localization ServerMgmt.NoServers}" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,24,0,0"/>
                <TextBlock Text="{converters:Localization ServerMgmt.NoServersHint}" 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,12,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

