<Page x:Class="CSP2.Desktop.Views.Pages.ServerManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
      d:DataContext="{d:DesignInstance Type=viewmodels:ServerManagementViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="服务器管理" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="#1f2937"/>
                <TextBlock Text="管理你的 CS2 服务器实例" 
                           FontSize="14" 
                           Foreground="#6b7280"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="➕ 添加服务器"
                        Command="{Binding AddServerCommand}"
                        Background="{StaticResource PrimaryBrush}"
                        Foreground="White"
                        Padding="15,10"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="14"
                        FontWeight="SemiBold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                <Button Content="🔄 刷新"
                        Command="{Binding RefreshCommand}"
                        Background="#f3f4f6"
                        Foreground="#374151"
                        Padding="15,10"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="14"
                        Margin="10,0,0,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 服务器列表 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Servers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#e5e7eb" 
                                BorderThickness="1" 
                                CornerRadius="8"
                                Padding="20"
                                Margin="0,0,0,15"
                                Background="White">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="5" 
                                                ShadowDepth="2" 
                                                Opacity="0.1" 
                                                Color="Black"/>
                            </Border.Effect>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 服务器标题和状态 -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="20" 
                                                   FontWeight="Bold"
                                                   Foreground="#1f2937"/>
                                        <TextBlock Text="{Binding InstallPath}" 
                                                   FontSize="12" 
                                                   Foreground="#6b7280"
                                                   Margin="0,3,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Column="1" 
                                            Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                            CornerRadius="12"
                                            Padding="12,6">
                                        <TextBlock Text="{Binding Status, Converter={StaticResource StatusToTextConverter}}" 
                                                   Foreground="White"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>

                                <!-- 服务器信息 -->
                                <Grid Grid.Row="1" Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="端口" FontSize="11" Foreground="#9ca3af"/>
                                        <TextBlock Text="{Binding Config.Port}" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#374151"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="地图" FontSize="11" Foreground="#9ca3af"/>
                                        <TextBlock Text="{Binding Config.Map}" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#374151"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="最大玩家" FontSize="11" Foreground="#9ca3af"/>
                                        <TextBlock Text="{Binding Config.MaxPlayers}" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#374151"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3">
                                        <TextBlock Text="Tick Rate" FontSize="11" Foreground="#9ca3af"/>
                                        <TextBlock Text="{Binding Config.TickRate}" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#374151"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>

                                <!-- 操作按钮 -->
                                <StackPanel Grid.Row="2" 
                                            Orientation="Horizontal" 
                                            Margin="0,15,0,0">
                                    <Button Content="▶️ 启动"
                                            Command="{Binding DataContext.StartServerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}"
                                            Background="#10b981"
                                            Foreground="White"
                                            Padding="12,8"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="13">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>

                                    <Button Content="⏹️ 停止"
                                            Command="{Binding DataContext.StopServerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}"
                                            Background="#ef4444"
                                            Foreground="White"
                                            Padding="12,8"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="13"
                                            Margin="10,0,0,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>

                                    <Button Content="🔄 重启"
                                            Command="{Binding DataContext.RestartServerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}"
                                            Background="#f59e0b"
                                            Foreground="White"
                                            Padding="12,8"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="13"
                                            Margin="10,0,0,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>

                                    <Button Content="📋 日志"
                                            Background="#6b7280"
                                            Foreground="White"
                                            Padding="12,8"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="13"
                                            Margin="10,0,0,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>

                                    <Button Content="⚙️ 设置"
                                            Background="#6b7280"
                                            Foreground="White"
                                            Padding="12,8"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="13"
                                            Margin="10,0,0,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>

                                    <Button Content="🗑️ 删除"
                                            Command="{Binding DataContext.DeleteServerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}"
                                            Background="#dc2626"
                                            Foreground="White"
                                            Padding="12,8"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="13"
                                            Margin="10,0,0,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 空状态提示 -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Visibility="{Binding Servers.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <TextBlock Text="📦" 
                       FontSize="64" 
                       HorizontalAlignment="Center"
                       Opacity="0.3"/>
            <TextBlock Text="还没有服务器" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Foreground="#6b7280"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
            <TextBlock Text="点击上方【添加服务器】按钮开始" 
                       FontSize="14" 
                       Foreground="#9ca3af"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Page>

