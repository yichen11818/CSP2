<Window x:Class="CSP2.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="CSP2 - Counter-Strike 2 Server Panel" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- 导航按钮样式 -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563eb"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 选中的导航按钮样式 -->
        <Style x:Key="NavButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="#2563eb"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- 左侧导航栏 -->
            <ColumnDefinition Width="220"/>
            <!-- 主内容区 -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Logo区域 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 导航菜单 -->
                    <RowDefinition Height="*"/>
                    <!-- 版本信息 -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <Border Grid.Row="0" Padding="20" Background="#1e40af">
                    <StackPanel>
                        <TextBlock Text="CSP2" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="CS2 服务器面板" 
                                   FontSize="12" 
                                   Foreground="#93c5fd"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- 导航菜单 -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <Button Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateToServerManagementCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🖥️" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="服务器管理"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateToLogConsoleCommand}"
                            Margin="0,5,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="日志控制台"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateToPluginMarketCommand}"
                            Margin="0,5,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🧩" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="插件市场"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateToSettingsCommand}"
                            Margin="0,5,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="设置"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- 版本信息 -->
                <Border Grid.Row="2" Padding="20,10" Background="#1e40af">
                    <StackPanel>
                        <TextBlock Text="版本 v0.1.0" 
                                   FontSize="11" 
                                   Foreground="#93c5fd"/>
                        <TextBlock Text="开发中" 
                                   FontSize="10" 
                                   Foreground="#93c5fd"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 右侧主内容区 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 页面内容容器 -->
            <Border Grid.Row="0" Background="White">
                <ContentControl Content="{Binding CurrentPage}" />
            </Border>

            <!-- 状态栏 -->
            <Border Grid.Row="1" 
                    Background="#f3f4f6" 
                    BorderBrush="#e5e7eb"
                    BorderThickness="0,1,0,0"
                    Padding="15,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="{Binding StatusText}" 
                               FontSize="12"
                               Foreground="#6b7280"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="1"
                               Text="{Binding SelectedMenuItem, StringFormat='当前: {0}'}"
                               FontSize="12"
                               Foreground="#6b7280"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

