<Window x:Class="CSP2.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
        xmlns:converters="clr-namespace:CSP2.Desktop.Converters"
        xmlns:controls="clr-namespace:CSP2.Desktop.Controls"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="{converters:Localization App.Title}" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">
    
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="10"/>
    </shell:WindowChrome.WindowChrome>
    
    <Window.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- 窗口控制按钮样式 -->
        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6b7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Margin="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e5e7eb"/>
                    <Setter Property="Foreground" Value="#3b82f6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 关闭按钮特殊样式 -->
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#fee2e2"/>
                    <Setter Property="Foreground" Value="#dc2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 导航按钮样式 -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="#475569" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="Transparent" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 选中的导航按钮样式 -->
        <Style x:Key="NavButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="#64748b"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- 外层边框和阴影 -->
        <Border Background="{DynamicResource BackgroundBrush}" 
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="{DynamicResource BorderBrush}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" 
                            ShadowDepth="0" 
                            Opacity="0.15" 
                            Color="{StaticResource ShadowColor}"/>
        </Border.Effect>
        
        <Grid>
                <Grid.ColumnDefinitions>
                    <!-- 左侧导航栏 -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- 主内容区 -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧导航栏 -->
                <Border Grid.Column="0" 
                        Background="{DynamicResource SidebarBackgroundBrush}"
                        CornerRadius="12,0,0,12">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Width" Value="220"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSidebarExpanded}" Value="False">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Width"
                                                               To="70" Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseInOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Width"
                                                               To="220" Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseInOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.RowDefinitions>
                            <!-- Logo区域 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 导航菜单 -->
                            <RowDefinition Height="*"/>
                            <!-- 展开/收起按钮 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 版本信息 -->
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Logo -->
                        <Border Grid.Row="0" Padding="20,24" Background="{DynamicResource SidebarDarkBackgroundBrush}" CornerRadius="12,0,0,0">
                            <Grid>
                                <StackPanel Visibility="{Binding IsSidebarExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="{converters:Localization App.Name}" 
                                               FontSize="32" 
                                               FontWeight="Bold"
                                               Foreground="White">
                                        <TextBlock.Effect>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                    <TextBlock Text="{converters:Localization App.Description}" 
                                               FontSize="12" 
                                               Foreground="#93c5fd"
                                               Margin="0,8,0,0"
                                               Opacity="0.9"/>
                                </StackPanel>
                                <Border Background="#334155"
                                        Width="40"
                                        Height="40"
                                        CornerRadius="10"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSidebarExpanded}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{StaticResource ServerIcon}" 
                                               FontFamily="{StaticResource FontAwesomeSolid}"
                                               FontSize="24"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- 导航菜单 -->
                        <StackPanel Grid.Row="1" Margin="0,20,0,0">
                            <Button Style="{StaticResource NavButtonStyle}"
                                    Command="{Binding NavigateToServerManagementCommand}"
                                    Margin="8,4"
                                    ToolTip="{converters:Localization Nav.ServerManagement}">
                                <Grid>
                                    <StackPanel Orientation="Horizontal" 
                                               Visibility="{Binding IsSidebarExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{StaticResource ServerIcon}" 
                                                  Style="{StaticResource NavIconStyle}" 
                                                  FontSize="16" 
                                                  Margin="0,0,12,0"/>
                                        <TextBlock Text="{converters:Localization Nav.ServerManagement}"/>
                                    </StackPanel>
                                    <TextBlock Text="{StaticResource ServerIcon}" 
                                              FontSize="16" 
                                              HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource NavIconStyle}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSidebarExpanded}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Button>
                            
                            <Button Style="{StaticResource NavButtonStyle}"
                                    Command="{Binding NavigateToLogConsoleCommand}"
                                    Margin="8,4"
                                    ToolTip="{converters:Localization Nav.LogConsole}">
                                <Grid>
                                    <StackPanel Orientation="Horizontal"
                                               Visibility="{Binding IsSidebarExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{StaticResource LogIcon}" 
                                                  Style="{StaticResource NavIconStyle}" 
                                                  FontSize="16" 
                                                  Margin="0,0,12,0"/>
                                        <TextBlock Text="{converters:Localization Nav.LogConsole}"/>
                                    </StackPanel>
                                    <TextBlock Text="{StaticResource LogIcon}" 
                                              FontSize="16" 
                                              HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource NavIconStyle}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSidebarExpanded}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Button>
                            
                            <Button Style="{StaticResource NavButtonStyle}"
                                    Command="{Binding NavigateToPluginMarketCommand}"
                                    Margin="8,4"
                                    ToolTip="{converters:Localization Nav.PluginMarket}">
                                <Grid>
                                    <StackPanel Orientation="Horizontal"
                                               Visibility="{Binding IsSidebarExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{StaticResource PluginIcon}" 
                                                  Style="{StaticResource NavIconStyle}" 
                                                  FontSize="16" 
                                                  Margin="0,0,12,0"/>
                                        <TextBlock Text="{converters:Localization Nav.PluginMarket}"/>
                                    </StackPanel>
                                    <TextBlock Text="{StaticResource PluginIcon}" 
                                              FontSize="16" 
                                              HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource NavIconStyle}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSidebarExpanded}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Button>
                            
                            <Button Style="{StaticResource NavButtonStyle}"
                                    Command="{Binding NavigateToDownloadManagerCommand}"
                                    Margin="8,4"
                                    ToolTip="{converters:Localization Nav.DownloadManager}">
                                <Grid>
                                    <StackPanel Orientation="Horizontal"
                                               Visibility="{Binding IsSidebarExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{StaticResource DownloadIcon}" 
                                                  Style="{StaticResource NavIconStyle}" 
                                                  FontSize="16" 
                                                  Margin="0,0,12,0"/>
                                        <TextBlock Text="{converters:Localization Nav.DownloadManager}"/>
                                        <Border Background="{StaticResource PrimaryBrush}"
                                                CornerRadius="10"
                                                Padding="6,2"
                                                Margin="8,0,0,0"
                                                VerticalAlignment="Center"
                                                Visibility="{Binding HasActiveDownloads, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="{Binding ActiveDownloadCount}"
                                                      FontSize="11"
                                                      FontWeight="Bold"
                                                      Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    <Grid>
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSidebarExpanded}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <TextBlock Text="{StaticResource DownloadIcon}" 
                                                  Style="{StaticResource NavIconStyle}"
                                                  FontSize="16" 
                                                  HorizontalAlignment="Center"/>
                                        <Border Background="{StaticResource DangerBrush}"
                                                Width="10"
                                                Height="10"
                                                CornerRadius="5"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,0,8,0"
                                                Visibility="{Binding HasActiveDownloads, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Grid>
                                </Grid>
                            </Button>
                            
                            <Button Style="{StaticResource NavButtonStyle}"
                                    Command="{Binding NavigateToSettingsCommand}"
                                    Margin="8,4"
                                    ToolTip="{converters:Localization Nav.Settings}">
                                <Grid>
                                    <StackPanel Orientation="Horizontal"
                                               Visibility="{Binding IsSidebarExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{StaticResource SettingsIcon}" 
                                                  Style="{StaticResource NavIconStyle}" 
                                                  FontSize="16" 
                                                  Margin="0,0,12,0"/>
                                        <TextBlock Text="{converters:Localization Nav.Settings}"/>
                                    </StackPanel>
                                    <TextBlock Text="{StaticResource SettingsIcon}" 
                                              FontSize="16" 
                                              HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource NavIconStyle}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSidebarExpanded}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Button>
                            
                            <!-- Debug控制台 (仅Debug模式显示) -->
                            <Button Style="{StaticResource NavButtonStyle}"
                                    Command="{Binding NavigateToDebugConsoleCommand}"
                                    Margin="8,4"
                                    ToolTip="{converters:Localization Nav.DebugConsole}"
                                    Visibility="{Binding IsDebugMode, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Grid>
                                    <StackPanel Orientation="Horizontal"
                                               Visibility="{Binding IsSidebarExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{StaticResource DebugIcon}" 
                                                  Style="{StaticResource NavIconStyle}" 
                                                  FontSize="16" 
                                                  Margin="0,0,12,0"/>
                                        <TextBlock Text="{converters:Localization Nav.DebugConsole}"/>
                                    </StackPanel>
                                    <TextBlock Text="{StaticResource DebugIcon}" 
                                              FontSize="16" 
                                              HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource NavIconStyle}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSidebarExpanded}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Button>
                        </StackPanel>
                        
                        <!-- 展开/收起按钮 -->
                        <Border Grid.Row="2" 
                                Background="#1e40af"
                                Padding="5">
                            <Button Command="{Binding ToggleSidebarCommand}"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Foreground="White"
                                   Cursor="Hand"
                                   HorizontalAlignment="Center"
                                   Padding="10,8"
                                   ToolTip="展开/收起侧边栏">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="4"
                                               Padding="{TemplateBinding Padding}">
                                            <TextBlock Text="{TemplateBinding Content}"
                                                      Foreground="{TemplateBinding Foreground}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2563eb"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Content" Value="◀"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSidebarExpanded}" Value="False">
                                                <Setter Property="Content" Value="▶"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Border>

                        <!-- 社交媒体图标 -->
                        <Border Grid.Row="3" Padding="20,16" Background="{DynamicResource SidebarDarkBackgroundBrush}" CornerRadius="0,0,0,12">
                            <Grid>
                                <!-- 侧边栏展开时显示的社交媒体图标 -->
                                <StackPanel Visibility="{Binding IsSidebarExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Orientation="Horizontal"
                                           HorizontalAlignment="Center">
                                    <!-- GitHub 图标 -->
                                    <Button x:Name="SidebarGitHubButton"
                                            Style="{StaticResource SocialButtonStyle}"
                                            Click="GitHubButton_Click"
                                            ToolTip="访问 GitHub 仓库"
                                            Margin="0,0,8,0">
                                        <TextBlock Text="{StaticResource GitHubIcon}"
                                                   Style="{StaticResource SocialIconStyle}"/>
                                    </Button>
                                    
                                    <!-- Discord 图标 -->
                                    <Button x:Name="SidebarDiscordButton"
                                            Style="{StaticResource SocialButtonStyle}"
                                            ToolTip="加入 Discord 社区（即将开放）">
                                        <TextBlock Text="{StaticResource DiscordIcon}"
                                                   Style="{StaticResource SocialIconStyle}"/>
                                    </Button>
                                </StackPanel>
                                
                                <!-- 侧边栏收起时显示的小图标 -->
                                <StackPanel Orientation="Horizontal"
                                           HorizontalAlignment="Center">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSidebarExpanded}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    
                                    <!-- GitHub 小图标 -->
                                    <Button x:Name="SidebarGitHubButtonSmall"
                                            Style="{StaticResource SocialButtonStyle}"
                                            Click="GitHubButton_Click"
                                            ToolTip="访问 GitHub 仓库"
                                            Margin="0,0,4,0">
                                        <TextBlock Text="{StaticResource GitHubIcon}"
                                                   FontFamily="{StaticResource FontAwesomeBrands}"
                                                   FontSize="14"
                                                   Foreground="#93c5fd"
                                                   Opacity="0.8"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Button>
                                    
                                    <!-- Discord 小图标 -->
                                    <Button x:Name="SidebarDiscordButtonSmall"
                                            Style="{StaticResource SocialButtonStyle}"
                                            ToolTip="加入 Discord 社区（即将开放）">
                                        <TextBlock Text="{StaticResource DiscordIcon}"
                                                   FontFamily="{StaticResource FontAwesomeBrands}"
                                                   FontSize="14"
                                                   Foreground="#93c5fd"
                                                   Opacity="0.8"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- 右侧主内容区 -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 页面内容容器 -->
                    <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" CornerRadius="0,12,0,0">
                        <Grid>
                            <!-- 页面内容 -->
                            <ContentControl Content="{Binding CurrentPage}" Margin="0,40,0,0"/>
                            
                            <!-- 顶部拖动区域 -->
                            <Border Height="40" 
                                   VerticalAlignment="Top"
                                   Background="Transparent"
                                   MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                                   Panel.ZIndex="999"
                                   Cursor="SizeAll">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <SolidColorBrush Color="Black" Opacity="0.02"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            
                            <!-- 窗口控制按钮（右上角） -->
                            <StackPanel HorizontalAlignment="Right" 
                                       VerticalAlignment="Top"
                                       Orientation="Horizontal"
                                       Panel.ZIndex="1000"
                                       shell:WindowChrome.IsHitTestVisibleInChrome="True">
                                <Button Style="{StaticResource WindowControlButtonStyle}"
                                        Content="&#xE921;"
                                        Click="MinimizeButton_Click"
                                        ToolTip="{converters:Localization Common.Minimize}"
                                        shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
                                <Button Style="{StaticResource CloseButtonStyle}"
                                        Content="&#xE8BB;"
                                        Click="CloseButton_Click"
                                        ToolTip="{converters:Localization Common.Close}"
                                        shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 状态栏 -->
                    <Border Grid.Row="1" 
                            Background="{DynamicResource BackgroundBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0"
                            CornerRadius="0,0,12,0"
                            Padding="16,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 左侧：系统状态 -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <!-- 在线状态指示器 -->
                                <Border Background="{StaticResource SuccessLightBrush}"
                                        CornerRadius="6"
                                        Padding="8,4"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="7" Height="7" Fill="{StaticResource SuccessBrush}" Margin="0,0,6,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Style.Triggers>
                                                        <EventTrigger RoutedEvent="Loaded">
                                                            <BeginStoryboard>
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                   From="1.0" To="0.3" Duration="0:0:1.5"
                                                                                   AutoReverse="True"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="在线" 
                                                   FontSize="11"
                                                   Foreground="{StaticResource SuccessDarkBrush}"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- 运行服务器数量 -->
                                <Border Background="#334155"
                                        CornerRadius="6"
                                        Padding="8,4"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{StaticResource ServerIcon}" 
                                                   FontFamily="{StaticResource FontAwesomeSolid}"
                                                   FontSize="11" Margin="0,0,4,0"/>
                                        <TextBlock FontSize="11" Foreground="{StaticResource TextSecondaryBrush}">
                                            <Run Text="{Binding RunningServerCount, Mode=OneWay}" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                                            <Run Text="/" />
                                            <Run Text="{Binding TotalServerCount, Mode=OneWay}"/>
                                            <Run Text="运行中"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                                
                                <!-- 系统资源 -->
                                <TextBlock Text="{Binding SystemInfo}" 
                                           FontSize="11"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>
                            </StackPanel>
                            
                            <!-- 中间：状态消息（如有） -->
                            <TextBlock Grid.Column="1"
                                       Text="{Binding StatusText}" 
                                       FontSize="11"
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="8,0"/>
                            
                            <!-- 右侧：版本信息 -->
                            <StackPanel Grid.Column="2" 
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBlock Text="CSP2" 
                                           FontSize="10"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           FontWeight="SemiBold"
                                           Margin="0,0,4,0"/>
                                <TextBlock Text="v0.1.0"
                                           FontSize="10"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- 下载悬浮球 -->
                    <Grid Grid.Row="1"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Bottom"
                          Margin="0,0,60,15"
                          Visibility="{Binding HasActiveDownloads, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button Command="{Binding OpenDownloadManagerCommand}"
                               Width="56"
                               Height="56"
                               Cursor="Hand"
                               ToolTip="{converters:Localization Nav.DownloadManager}"
                               shell:WindowChrome.IsHitTestVisibleInChrome="True">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <!-- 外层发光边框 -->
                                        <Ellipse Fill="{StaticResource PrimaryBrush}"
                                                Opacity="0.3">
                                            <Ellipse.RenderTransform>
                                                <ScaleTransform ScaleX="1.1" ScaleY="1.1" CenterX="28" CenterY="28"/>
                                            </Ellipse.RenderTransform>
                                        </Ellipse>
                                        
                                        <!-- 主圆球 -->
                                        <Ellipse Fill="{StaticResource PrimaryBrush}">
                                            <Ellipse.Effect>
                                                <DropShadowEffect BlurRadius="10" 
                                                                ShadowDepth="0" 
                                                                Opacity="0.5" 
                                                                Color="#3b82f6"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                        
                                        <!-- 进度圆环 -->
                                        <Grid>
                                            <Ellipse Stroke="#1e40af"
                                                   StrokeThickness="3"
                                                   Margin="4"/>
                                            
                                            <!-- 下载图标和数量 -->
                                            <StackPanel HorizontalAlignment="Center"
                                                       VerticalAlignment="Center">
                                                <TextBlock Text="{StaticResource DownloadIcon}" 
                                                          FontFamily="{StaticResource FontAwesomeSolid}"
                                                          FontSize="20"
                                                          HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding ActiveDownloadCount}"
                                                          FontSize="11"
                                                          FontWeight="Bold"
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          Margin="0,-3,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                       To="1.1" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                       To="1.1" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                       To="1.0" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                       To="1.0" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" CenterX="28" CenterY="28"/>
                            </Button.RenderTransform>
                        </Button>
                    </Grid>
                </Grid>
        </Grid>
    </Border>
        
        <!-- 烟花动画层（首次启动时显示） -->
        <controls:FireworksControl x:Name="FireworksAnimation"
                                   Visibility="Collapsed"
                                   Panel.ZIndex="999"/>
    </Grid>
</Window>

