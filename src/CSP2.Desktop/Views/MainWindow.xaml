<Window x:Class="CSP2.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="CSP2 - Counter-Strike 2 Server Panel" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,15">
            <TextBlock Text="CSP2 - Counter-Strike 2 Server Panel" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <!-- 主内容区 -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 欢迎信息 -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="欢迎使用 CSP2 服务器管理面板" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                <TextBlock Text="这是第一次开发的基础版本" 
                           FontSize="14" 
                           Foreground="Gray"
                           Margin="0,0,0,5"/>
                <TextBlock Text="项目结构已创建,核心接口和数据模型已完成" 
                           FontSize="14" 
                           Foreground="Gray"/>
            </StackPanel>

            <!-- 功能区域 -->
            <Border Grid.Row="1" 
                    BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="✅ 已完成:" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="• CSP2.Core 项目 - 核心接口和数据模型" 
                               Margin="0,5"/>
                    <TextBlock Text="• CSP2.Providers 项目 - Windows平台支持" 
                               Margin="0,5"/>
                    <TextBlock Text="• Metamod 框架Provider" 
                               Margin="0,5"/>
                    <TextBlock Text="• CounterStrikeSharp 框架Provider" 
                               Margin="0,5"/>
                    <TextBlock Text="• CSP2.Desktop WPF 项目基础结构" 
                               Margin="0,5"/>

                    <TextBlock Text="🚧 待实现:" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,20,0,10"/>
                    
                    <TextBlock Text="• 服务器管理服务实现" 
                               Margin="0,5"
                               Foreground="Gray"/>
                    <TextBlock Text="• 插件管理服务实现" 
                               Margin="0,5"
                               Foreground="Gray"/>
                    <TextBlock Text="• UI页面和ViewModels" 
                               Margin="0,5"
                               Foreground="Gray"/>
                    <TextBlock Text="• 配置持久化" 
                               Margin="0,5"
                               Foreground="Gray"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 状态栏 -->
        <Border Grid.Row="2" 
                Background="LightGray" 
                Padding="10,5">
            <TextBlock Text="{Binding StatusText}" 
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>

