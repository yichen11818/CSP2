<UserControl x:Class="CSP2.Desktop.Views.MapHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:CSP2.Desktop.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=viewmodels:MapHistoryViewModel}">

    <UserControl.Resources>
        <!-- 加载指示器样式 -->
        <Style x:Key="LoadingOverlay" TargetType="Grid">
            <Setter Property="Background" Value="#80000000"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- 主内容 -->
        <DockPanel>
            <!-- 顶部工具栏 -->
            <Border DockPanel.Dock="Top" Background="{DynamicResource SecondaryBackgroundBrush}" 
                    Padding="16,12" Margin="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左侧：标题和统计 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="🗺️" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <StackPanel>
                            <TextBlock Text="Workshop 地图历史" FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Foreground="{DynamicResource SecondaryTextBrush}" FontSize="12" Margin="0,2,0,0">
                                <Run Text="共"/>
                                <Run Text="{Binding TotalMaps, Mode=OneWay}" FontWeight="SemiBold"/>
                                <Run Text="个地图 •"/>
                                <Run Text="{Binding TotalLoads, Mode=OneWay}" FontWeight="SemiBold"/>
                                <Run Text="次加载"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!-- 右侧：操作按钮 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="🔄 刷新" Command="{Binding RefreshCommand}"
                                Padding="12,6" Margin="0,0,8,0"/>
                        <Button Content="🗑️ 清空历史" Command="{Binding ClearHistoryCommand}"
                                Padding="12,6" Background="{DynamicResource DangerBrush}"
                                Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 状态栏 -->
            <Border DockPanel.Dock="Bottom" Background="{DynamicResource SecondaryBackgroundBrush}"
                    Padding="16,8" Margin="0,1,0,0">
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           FontSize="12"/>
            </Border>

            <!-- 地图列表 -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <ItemsControl ItemsSource="{Binding MapHistory}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Padding="16" Margin="0,0,0,12"
                                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 预览图 -->
                                    <Border Grid.Column="0" Width="160" Height="90" 
                                            CornerRadius="4" Margin="0,0,16,0"
                                            Background="{DynamicResource BorderBrush}">
                                        <Grid>
                                            <Image Source="{Binding PreviewImagePath}"
                                                   Stretch="UniformToFill">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Style.Triggers>
                                                            <!-- 无预览图时显示占位符 -->
                                                            <DataTrigger Binding="{Binding HasPreviewImage}" Value="False">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                            <!-- 无预览图占位符 -->
                                            <TextBlock Text="🗺️" FontSize="48" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                                       Opacity="0.3">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasPreviewImage}" Value="False">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>

                                    <!-- 地图信息 -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding MapName}" 
                                                   FontSize="16" FontWeight="SemiBold" 
                                                   Margin="0,0,0,8"/>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="🆔 Workshop ID: " 
                                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding WorkshopId}" 
                                                       FontFamily="Consolas"
                                                       FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="🕐 最后加载: " 
                                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding LastLoadedAt, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
                                                       FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📊 加载次数: " 
                                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding LoadCount}" 
                                                       FontSize="12" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- 操作按钮 -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="16,0,0,0">
                                        <Button Content="🌐 访问 Workshop"
                                                Command="{Binding DataContext.OpenWorkshopPageCommand, 
                                                    RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding WorkshopId}"
                                                Padding="12,6" Margin="0,0,0,8"
                                                MinWidth="120"/>
                                        
                                        <Button Content="🗑️ 删除"
                                                Command="{Binding DataContext.DeleteMapCommand, 
                                                    RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Padding="12,6"
                                                MinWidth="120"
                                                Background="{DynamicResource DangerBrush}"
                                                Foreground="White"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>

        <!-- 加载遮罩 -->
        <Grid Style="{StaticResource LoadingOverlay}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="加载中..." FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- 空状态提示 -->
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsLoading}" Value="False"/>
                                <Condition Binding="{Binding MapHistory.Count}" Value="0"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible"/>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🗺️" FontSize="64" HorizontalAlignment="Center" Opacity="0.3" Margin="0,0,0,16"/>
                <TextBlock Text="还没有加载过 Workshop 地图" 
                           FontSize="18" Foreground="{DynamicResource SecondaryTextBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}"
                           HorizontalAlignment="Center" TextAlignment="Center">
                    <Run Text="在服务器上使用"/>
                    <Run Text="host_workshop_map &lt;ID&gt;" FontFamily="Consolas" FontWeight="SemiBold"/>
                    <Run Text="命令"/>
                    <LineBreak/>
                    <Run Text="加载的地图将自动记录在这里"/>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

